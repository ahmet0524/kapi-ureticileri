---
// src/components/Categories.astro - ✅ ÇOK DİLLİ VERSİYON
import { getLangFromUrl, useTranslations, getLocalizedRoute } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// ✅ Kategoriler - Resimler ve linkler korundu
const categories = [
  {
    title: t('products.pvc'),
    description: t('categories.pvc.description'),
    image: "pvc-kapilar.webp",
    alt: t('categories.pvc.alt'),
    features: [
      t('categories.pvc.feature1'),
      t('categories.pvc.feature2'),
      t('categories.pvc.feature3')
    ],
    link: getLocalizedRoute("/pvc-kapilar", lang)
  },
  {
    title: t('products.laminoks'),
    description: t('categories.laminoks.description'),
    image: "laminoks-kapilar.webp",
    alt: t('categories.laminoks.alt'),
    features: [
      t('categories.laminoks.feature1'),
      t('categories.laminoks.feature2'),
      t('categories.laminoks.feature3')
    ],
    link: getLocalizedRoute("/laminoks-kapilar", lang)
  },
  {
    title: t('products.hotel'),
    description: t('categories.hotel.description'),
    image: "otel-kapilari.webp",
    alt: t('categories.hotel.alt'),
    features: [
      t('categories.hotel.feature1'),
      t('categories.hotel.feature2'),
      t('categories.hotel.feature3')
    ],
    link: getLocalizedRoute("/otel-kapilari", lang)
  },
  {
    title: t('products.hospital'),
    description: t('categories.hospital.description'),
    image: "hastane-kapilari.webp",
    alt: t('categories.hospital.alt'),
    features: [
      t('categories.hospital.feature1'),
      t('categories.hospital.feature2'),
      t('categories.hospital.feature3')
    ],
    link: getLocalizedRoute("/hastane-kapilari", lang)
  }
];
---

<section class="categories section" id="kategoriler">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{t('categories.title')}</h2>
      <p class="section-subtitle">
        {t('categories.subtitle')}
      </p>
    </div>

    <div class="categories-grid">
      {categories.map((category) => (
        <article class="category-card">
          <!-- ✅ RESİM BÖLÜMÜ ARTIK TIKLANABİLİR -->
          <a href={category.link} class="card-image-link" aria-label={`${category.title} ${t('categories.detailsAriaLabel')}`}>
            <div class="card-image">
              <img
                src={`/assets/img/categories/${category.image}`}
                alt={category.alt}
                width="200"
                height="200"
                loading="lazy"
              />
            </div>
          </a>

          <div class="card-body">
            <div class="card-content">
              <!-- ✅ BAŞLIK DA TIKLANABİLİR -->
              <h3 class="card-title">
                <a href={category.link} class="title-link">
                  {category.title}
                </a>
              </h3>
              <p class="card-description">{category.description}</p>

              <ul class="card-features">
                {category.features.map((feature) => (
                  <li class="feature-tag">{feature}</li>
                ))}
              </ul>
            </div>

            <div class="card-footer">
              <a href={category.link} class="card-btn">
                {t('categories.detailsButton')}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="arrow-icon">
                  <path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <div class="section-cta">
      <a href={getLocalizedRoute("/kategoriler", lang)} class="btn btn-primary">
        {t('categories.viewAllButton')}
      </a>
    </div>
  </div>
</section>

<style>
  .categories {
    background: #ffffff;
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 0.75rem;
  }

  .section-subtitle {
    color: #6b7280;
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .category-card {
    display: flex;
    align-items: stretch;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .category-card:hover {
    border-color: #9ca3af;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* ✅ RESİM LİNKİ STİLLERİ */
  .card-image-link {
    flex: 0 0 200px;
    display: block;
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  .card-image {
    background: #f9fafb;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    position: relative;
  }

  /* ✅ HOVER OVERLAY EFEKTİ */
  .card-image::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0);
    transition: background 0.3s ease;
    pointer-events: none;
  }

  .card-image-link:hover .card-image::after {
    background: rgba(0, 0, 0, 0.1);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card-image-link:hover img {
    transform: scale(1.05);
  }

  .card-body {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 1.5rem;
  }

  .card-content {
    margin-bottom: 1.5rem;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  /* ✅ BAŞLIK LİNKİ STİLLERİ */
  .title-link {
    color: #111827;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .title-link:hover {
    color: #4b5563;
  }

  .card-description {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .card-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-tag {
    background: #f3f4f6;
    color: #374151;
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .card-footer {
    margin-top: auto;
  }

  /* ✅ DETAY BUTONU GELİŞTİRİLMİŞ */
  .card-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #111827;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    padding: 0.5rem 0;
  }

  .card-btn:hover {
    color: #4b5563;
    gap: 0.75rem;
  }

  .arrow-icon {
    transition: transform 0.2s ease;
  }

  .card-btn:hover .arrow-icon {
    transform: translateX(3px);
  }

  .section-cta {
    text-align: center;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: #111827;
    color: white;
  }

  .btn-primary:hover {
    background: #1f2937;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  /* ============================================
     RESPONSIVE
     ============================================ */
  @media (max-width: 768px) {
    .categories {
      padding: 3rem 0;
    }

    .categories-grid {
      gap: 1.5rem;
    }

    .card-image-link {
      flex: 0 0 120px;
    }

    .card-image {
      height: 120px;
    }

    .card-body {
      padding: 1rem;
    }

    .card-title {
      font-size: 1.1rem;
    }

    .card-description {
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    .card-features {
      gap: 0.25rem;
    }

    .feature-tag {
      font-size: 0.7rem;
      padding: 0.2rem 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .card-image-link {
      flex: 0 0 100px;
    }

    .card-image {
      height: 100px;
    }

    .card-body {
      padding: 0.75rem;
    }

    .card-title {
      font-size: 1rem;
    }
  }

  /* ============================================
     ERİŞİLEBİLİRLİK
     ============================================ */
  .card-image-link:focus,
  .title-link:focus,
  .card-btn:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }

  @media (prefers-reduced-motion: reduce) {
    .card-image img,
    .card-btn,
    .arrow-icon {
      transition: none;
    }
  }

  /* ============================================
     RTL SUPPORT (ARAPÇA)
     ============================================ */
  html[dir="rtl"] .category-card {
    flex-direction: row-reverse;
  }

  html[dir="rtl"] .arrow-icon {
    transform: scaleX(-1);
  }

  html[dir="rtl"] .card-btn:hover .arrow-icon {
    transform: scaleX(-1) translateX(-3px);
  }
</style>
