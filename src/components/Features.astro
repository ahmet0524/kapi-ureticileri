---
// src/components/Features.astro
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="features section" id="hakkimizda">
  <div class="container">
    <div class="content-section">
      <div class="main-content">
        <h2>{t('features.mainTitle')}</h2>
        <p>{t('features.paragraph1')}</p>
        <p>{t('features.paragraph2')}</p>

        <h3>{t('features.exportTitle')}</h3>
        <p>{t('features.exportParagraph1')}</p>
        <p>{t('features.exportParagraph2')}</p>

        <h3>{t('features.factoryTitle')}</h3>
        <p>{t('features.factoryParagraph1')}</p>
        <p>{t('features.factoryParagraph2')}</p>

        <h3>{t('features.productsTitle')}</h3>
        <p>{t('features.productsParagraph')}</p>

        <div class="cta-section">
          <h3>{t('features.ctaTitle')}</h3>
          <p>{t('features.ctaDescription')}</p>

          <div class="cta-buttons">
            <a href="https://www.cihanpandoor.com" target="_blank" rel="noopener" class="btn-primary">
              {t('features.websiteBtn')}
            </a>
            <a href="https://www.cihanpandoor.com/E-Katalog.pdf" target="_blank" rel="noopener" class="btn-secondary">
              {t('features.catalogBtn')}
            </a>
          </div>
        </div>
      </div>

      <div class="stats-sidebar">
        <div class="stat-card">
          <div class="stat-number">1995</div>
          <div class="stat-label">{t('features.founded')}</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">600K</div>
          <div class="stat-label">{t('features.capacity')}</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">25+</div>
          <div class="stat-label">{t('features.countries')}</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">150</div>
          <div class="stat-label">{t('features.employees')}</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">15K mÂ²</div>
          <div class="stat-label">{t('features.productionArea')}</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .features {
    background: #f8fafc;
    padding: 5rem 0;
    border-top: 1px solid #e5e7eb;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .content-section {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  .main-content h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  .main-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin: 2.5rem 0 1rem;
    line-height: 1.4;
  }

  .main-content p {
    color: #374151;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    font-size: 1rem;
    text-align: justify;
  }

  .cta-section {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
    margin-top: 2rem;
  }

  .cta-section h3 {
    margin-top: 0;
    margin-bottom: 1rem;
    color: #111827;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
  }

  .btn-primary, .btn-secondary {
    padding: 0.875rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .btn-primary {
    background: #111827;
    color: white;
  }

  .btn-primary:hover {
    background: #1f2937;
    color: white;
  }

  .btn-secondary {
    background: transparent;
    color: #111827;
    border: 1px solid #d1d5db;
  }

  .btn-secondary:hover {
    background: #f9fafb;
    border-color: #9ca3af;
  }

  .stats-sidebar {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .stat-card {
    background: white;
    padding: 2rem 1.5rem;
    text-align: center;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
    min-height: 120px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 800;
    color: #111827;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    color: #6b7280;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media (min-width: 1024px) {
    .content-section {
      grid-template-columns: 2fr 1fr;
      gap: 4rem;
    }

    .stats-sidebar {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .features {
      padding: 3rem 0;
    }

    .main-content h2 {
      font-size: 1.75rem;
    }

    .main-content h3 {
      font-size: 1.25rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .stats-sidebar {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
