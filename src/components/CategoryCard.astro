---
export interface Props {
  title: string;
  image: string;
  alt: string;
  href: string;
}

const { title, image, alt, href } = Astro.props;
---

<div class="group">
  <a href={href} class="block">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-all group-hover:scale-105">
      <img
        src={image}
        alt={alt}
        class="w-full h-64 object-cover"
        loading="lazy"
        width="257"
        height="386"
      />
      <div class="p-4 text-center">
        <h4 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
          {title}
        </h4>
      </div>
    </div>
  </a>
</div>