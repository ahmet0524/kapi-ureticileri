---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();

const contactInfo = {
  phone: '+90 544 169 00 38',
  whatsapp: '905441690038',
  email: 'exportcihanpandoor@gmail.com',
  website: 'www.cihanpandoor.com',
  address: 'Organized Industrial Zone 29. Street No:28, Kayseri, Turkey'
};

const footerLinks = {
  company: [
    { label: "Hakkımızda", href: "/hakkimizda" },
    { label: "Misyon & Vizyon", href: "/misyon-vizyon" },
    { label: "Kalite Politikası", href: "/kalite" },
    { label: "İhracat", href: "/ihracat" }
  ],
  categories: [
    { label: "Hakkımızda", href: "/hakkimizda" },
    { label: "PVC Kapılar", href: "/pvc-kapilar" },
    { label: "Laminoks Kapılar", href: "/laminoks-kapilar" },
    { label: "Otel Kapıları", href: "/otel-kapilari" },
    { label: "Hastane Kapıları", href: "/hastane-kapilari" }
  ],
  support: [
    { label: "İletişim", href: "/iletisim" },
    { label: "SSS", href: "/sss" },
    { label: "Destek", href: "/destek" },
    { label: "Katalog", href: "https://www.cihanpandoor.com/E-Katalog.pdf" }
  ]
};
