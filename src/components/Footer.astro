        </div>

        <!-- Links Sections -->
        <div class="footer-links">
          <div class="links-column">
            <h3 class="links-title">Şirket</h3>
            <ul class="links-list">
              {footerLinks.company.map((link) => (
                <li>
                  <a href={link.href} class="footer-link">{link.label}</a>
                </li>
              ))}
            </ul>
          </div>

          <div class="links-column">
            <h3 class="links-title">Kategoriler</h3>
            <ul class="links-list">
              {footerLinks.categories.map((link) => (
                <li>
                  <a href={link.href} class="footer-link">{link.label}</a>
                </li>
              ))}
            </ul>
          </div>

          <div class="links-column">
            <h3 class="links-title">Destek</h3>
            <ul class="links-list">
              {footerLinks.support.map((link) => (
                <li>
                  <a href={link.href} class="footer-link" target={link.href.startsWith('http') ? '_blank' : '_self'}>{link.label}</a>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Contact Section -->
        <div class="footer-contact">
          <h3 class="contact-title">İletişim</h3>
          <div class="contact-info">
            <div class="contact-item">
              <strong>Adres:</strong>
              <p>{contactInfo.address}</p>
            </div>
            <div class="contact-item">
              <strong>Telefon:</strong>
              <p>{contactInfo.phone}</p>
            </div>
            <div class="contact-item">
              <strong>E-posta:</strong>
              <p>{contactInfo.email}</p>
            </div>
            <div class="contact-item">
              <strong>Website:</strong>
              <p><a href={`https://${contactInfo.website}`} target="_blank" rel="noopener">{contactInfo.website}</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Section -->
  <div class="footer-bottom">
    <div class="container">
      <div class="bottom-content">
        <div class="copyright">
          <p>&copy; {currentYear} CihanPan Door. Tüm hakları saklıdır.</p>
        </div>
        <div class="bottom-links">
          <a href="/gizlilik" class="bottom-link">Gizlilik Politikası</a>
          <a href="/kosullar" class="bottom-link">Kullanım Koşulları</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #1f2937;
    color: white;
    border-top: 1px solid #374151;
  }

  .footer-main {
    padding: 3rem 0 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .footer-brand {
    text-align: center;
  }

  .brand-logo {
    margin-bottom: 1rem;
  }

  .brand-logo img {
    height: auto;
    max-height: 40px;
  }

  .brand-description {
    color: #d1d5db;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    max-width: 300px;
    margin-left: auto;
    margin-right: auto;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
  }

  .social-link {
    width: 40px;
    height: 40px;
    background: #374151;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: #d1d5db;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: #4b5563;
    color: white;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
    text-align: center;
  }

  .links-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #f3f4f6;
  }

  .links-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .links-list li {
    margin-bottom: 0.5rem;
  }

  .footer-link {
    color: #d1d5db;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: white;
  }

  .footer-contact {
    text-align: center;
  }

  .contact-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #f3f4f6;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-item {
    font-size: 0.875rem;
  }

  .contact-item strong {
    color: #f3f4f6;
    display: block;
    margin-bottom: 0.25rem;
  }

  .contact-item p {
    color: #d1d5db;
    margin: 0;
    line-height: 1.4;
  }

  .contact-item a {
    color: #d1d5db;
    text-decoration: none;
  }

  .contact-item a:hover {
    color: white;
  }

  .footer-bottom {
    padding: 1rem 0;
    border-top: 1px solid #374151;
    background: #111827;
  }

  .bottom-content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
    text-align: center;
  }

  .copyright {
    color: #9ca3af;
    font-size: 0.75rem;
  }

  .bottom-links {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .bottom-link {
    color: #9ca3af;
    text-decoration: none;
    font-size: 0.75rem;
    transition: color 0.2s ease;
  }

  .bottom-link:hover {
    color: #d1d5db;
  }

  /* Desktop Layout */
  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr 2fr 1fr;
      gap: 3rem;
    }

    .footer-brand {
      text-align: left;
    }

    .brand-description {
      margin-left: 0;
      margin-right: 0;
    }

    .social-links {
      justify-content: flex-start;
    }

    .footer-links {
      text-align: left;
    }

    .footer-contact {
      text-align: left;
    }

    .bottom-content {
      justify-content: space-between;
    }
  }

  @media (max-width: 767px) {
    .bottom-content {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>