  // Event listeners and initialization
  document.addEventListener('DOMContentLoaded', () => {
    renderProducts();

    // Quote form submission
    document.getElementById('quoteForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      // Validate required fields
      if (!data.customerName || !data.customerPhone) {
        alert('Lütfen zorunlu alanları doldurunuz (Ad Soyad ve Telefon)');
        return;
      }

      try {
        const submitBtn = e.target.querySelector('.btn-submit');
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Gönderiliyor...';
        submitBtn.disabled = true;

        await sendQuoteEmail(data);

        alert('Teklif talebiniz alındı! En kısa sürede size dönüş yapacağız.');
        closeQuoteModal();

      } catch (error) {
        alert('Bir hata oluştu. Lütfen telefon ile iletişime geçiniz: +90 544 169 0038');
        console.error('Email sending error:', error);
      } finally {
        const submitBtn = e.target.querySelector('.btn-submit');
        if (submitBtn) {
          submitBtn.textContent = 'Teklif Gönder';
          submitBtn.disabled = false;
        }
      }
    });

    // Modal close events
    document.getElementById('quoteModalClose').addEventListener('click', closeQuoteModal);

    document.getElementById('quoteModal').addEventListener('click', (e) => {
      if (e.target.id === 'quoteModal') {
        closeQuoteModal();
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeQuoteModal();
      }
    });
  });
</script>