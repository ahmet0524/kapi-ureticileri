    card.className = 'product-card';
    card.setAttribute('aria-label', `${product.name} PVC kapı modeli`);

    card.innerHTML = `
      <div class="product-image">
        <img src="${product.image}"
             alt="${product.altText}"
             title="${product.name} - CihanPan Door PVC Interior Door Model"
             loading="lazy"
             width="300"
             height="300"
             onerror="this.src='${product.fallbackImage}'; this.alt='${product.name} PVC Door Sample';">
      </div>
      <div class="product-info">
        <h3 class="product-title">${product.name}</h3>
      </div>
    `;

    return card;
  }

  // Quote Modal Functions
  function openQuoteModal() {
    const modal = document.getElementById('quoteModal');
    modal.classList.add('active');
    modal.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';

    setTimeout(() => {
      document.getElementById('customerName').focus();
    }, 100);
  }

  function closeQuoteModal() {
    const modal = document.getElementById('quoteModal');
    modal.classList.remove('active');
    modal.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
    document.getElementById('quoteForm').reset();
  }

  // Email sending function
  async function sendQuoteEmail(formData) {
    const subject = encodeURIComponent('Yeni PVC Kapı Teklif Talebi - CihanPan Door');
    const body = encodeURIComponent(`
