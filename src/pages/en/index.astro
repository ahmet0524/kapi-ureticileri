}

/* ============================================
   Responsive Design
   ============================================ */
@media (max-width: 768px) {
  .hero {
    padding: 6rem 0 3rem;
  }

  .hero-stats {
    gap: 2rem;
  }

  .stat-item {
    min-width: 100px;
  }

  .stat-item strong {
    font-size: 2rem;
  }

  .categories-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .features-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .cta-buttons {
    flex-direction: column;
    align-items: stretch;
  }

  .btn {
    width: 100%;
    justify-content: center;
  }
}

@media (max-width: 480px) {
  .hero {
