  "foundingDate": "1995",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Organize Sanayi Bölgesi 29. Sokak No:28",
    "addressLocality": "Kayseri",
    "addressRegion": "Kayseri",
    "postalCode": "38070",
    "addressCountry": "TR"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "38.7312",
    "longitude": "35.4787"
  },
  "contactPoint": [
    {
      "@type": "ContactPoint",
      "telephone": "+90-544-169-0038",
      "contactType": "Sales",
      "availableLanguage": ["Turkish", "English", "German", "Arabic"],
