---
// src/pages/kategoriler.astro
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const baseUrl = 'https://kapi-ureticileri.vercel.app';
const currentUrl = `${baseUrl}/kategoriler`;

const breadcrumbItems = [
  { name: "Ana Sayfa", href: "/" },
  { name: "Kategoriler", href: "/kategoriler" }
];

// TÃ¼m iÃ§erikleri Ã§ek ve kategorilere gÃ¶re grupla
const allPosts = await getCollection('article');
const categoryCounts = {};

allPosts.forEach(post => {
  const category = post.data.category || 'Genel';
  if (!categoryCounts[category]) {
    categoryCounts[category] = {
      name: category,
      count: 0,
      posts: []
    };
  }
  categoryCounts[category].count++;
  categoryCounts[category].posts.push(post);
});

const categories = Object.values(categoryCounts).sort((a, b) => b.count - a.count);
---

<Layout
  title="Kategoriler | CihanPan Door Blog"
  description="CihanPan Door blog kategorileri. PVC kapÄ±, hastane kapÄ±sÄ±, otel kapÄ±sÄ± ve daha fazlasÄ± hakkÄ±nda iÃ§erikler."
  canonical={currentUrl}
>
  <Header />
  <Breadcrumbs items={breadcrumbItems} />

  <main class="categories-page">
    <div class="container">
      <header class="page-header">
        <h1>Ä°Ã§erik Kategorileri</h1>
        <p>Ä°lginizi Ã§eken konularÄ± keÅŸfedin</p>
      </header>

      <div class="categories-grid">
        {categories.map((category) => (
          <article class="category-card">
            <div class="category-icon">ðŸ“‚</div>
            <h2 class="category-name">{category.name}</h2>
            <p class="category-count">{category.count} Ä°Ã§erik</p>
            <div class="category-posts">
              {category.posts.slice(0, 3).map(post => (
                <a href={`/blog/${post.id}`} class="post-link">
                  {post.data.title}
                </a>
              ))}
              {category.posts.length > 3 && (
                <span class="more-posts">+{category.posts.length - 3} iÃ§erik daha</span>
              )}
            </div>
          </article>
        ))}
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .categories-page {
    padding: 4rem 0;
    background: #f8fafc;
    min-height: 60vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #1a202c;
    margin-bottom: 0.5rem;
  }

  .page-header p {
    font-size: 1.1rem;
    color: #6b7280;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .category-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    text-align: center;
  }

  .category-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(8, 145, 178, 0.15);
  }

  .category-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .category-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 0.5rem;
  }

  .category-count {
    color: #0891b2;
    font-weight: 600;
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }

  .category-posts {
    border-top: 1px solid #e5e7eb;
    padding-top: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    text-align: left;
  }

  .post-link {
    color: #4a5568;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
    display: block;
    padding: 0.5rem;
    border-radius: 4px;
  }

  .post-link:hover {
    color: #0891b2;
    background: #f0f9ff;
  }

  .more-posts {
    color: #9ca3af;
    font-size: 0.85rem;
    font-style: italic;
    padding: 0.5rem;
  }

  @media (max-width: 768px) {
    .categories-grid {
      grid-template-columns: 1fr;
    }

    .page-header h1 {
      font-size: 2rem;
    }
  }
</style>
