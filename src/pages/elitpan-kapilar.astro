      id: `Elitpan-${modelNumber}`,
      name: displayName,
      category: 'elitpan',
      image: `/assets/img/elitpan-kapilar/${fileName}`,
      fallbackImage: `https://picsum.photos/300/400?random=${index + 300}`,
      altText: `CihanPan Door Elitpan Interior Door Model ${modelNumber} - Premium Quality Laminate Door for Commercial Projects, Turkish Manufacturer`,
      description: `Premium Elitpan door model ${modelNumber}. High-end laminate interior door suitable for luxury projects, hotels, hospitals and commercial buildings. Scratch resistant surface, customizable sizes. Wholesale manufacturer prices from Kayseri, Turkey.`,
      seoKeywords: `premium elitpan door model ${modelNumber}, luxury interior doors, commercial doors, premium turkish manufacturer wholesale, CihanPan door premium series`,
      schemaData: {
        "@type": "Product",
        "name": `Premium Elitpan Interior Door Model ${modelNumber}`,
        "description": `Premium Elitpan door model ${modelNumber} for luxury commercial use`,
        "brand": "CihanPan Door",
        "material": "Premium Elitpan",
        "category": "Luxury Interior Doors"
      }
    });
  });

  function renderProducts() {
    const grid = document.getElementById('productsGrid');
    const loading = document.getElementById('loading');

    loading.style.display = 'block';
    grid.innerHTML = '';

    setTimeout(() => {
      elitpanModels.forEach((product) => {
        const card = createProductCard(product);
        grid.appendChild(card);
      });
      loading.style.display = 'none';
    }, 200);
  }

  function createProductCard(product) {
    const card = document.createElement('article');
    card.className = 'product-card';
    card.setAttribute('aria-label', `${product.name} Premium Elitpan kapı modeli`);

    card.innerHTML = `
      <div class="product-image">
        <img src="${product.image}"
             alt="${product.altText}"
             title="${product.name} - CihanPan Door Premium Elitpan Interior Door Model"
             loading="lazy"
             width="300"
             height="300"
             onerror="this.src='${product.fallbackImage}'; this.alt='${product.name} Premium Elitpan Door Sample';">
      </div>
      <div class="product-info">
        <h3 class="product-title">${product.name}</h3>
      </div>
    `;

    return card;
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    renderProducts();
  });
</script>