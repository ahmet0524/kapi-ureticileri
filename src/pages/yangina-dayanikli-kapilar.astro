    });
  });

  // Current filter state
  let currentFilter = 'all';
  let filteredProducts = yanginModels;

  function renderProducts() {
    const grid = document.getElementById('productsGrid');
    const loading = document.getElementById('loading');

    loading.style.display = 'block';
    grid.innerHTML = '';

    setTimeout(() => {
      if (filteredProducts.length === 0) {
        grid.innerHTML = `
          <div style="grid-column: 1/-1; text-align: center; padding: 3rem;">
            <h3 style="color: #6b7280; margin-bottom: 1rem;">Bu kategoride henüz ürün bulunmuyor</h3>
            <p style="color: #9ca3af;">Yakında yeni yangın kapısı modelleri eklenecek.</p>
          </div>
        `;
      } else {
        filteredProducts.forEach((product, index) => {
          const card = createProductCard(product);
          grid.appendChild(card);
        });
      }

      loading.style.display = 'none';
    }, 300);
  }

  function createProductCard(product) {
    const card = document.createElement('article');
    card.className = 'product-card';
    card.setAttribute('aria-label', `${product.name} ${product.colorInfo} yangın kapısı modeli`);

    card.innerHTML = `
      <div class="product-image">
        <img src="${product.image}"
             alt="${product.altText}"
             title="${product.name} ${product.colorInfo} - CihanPan Door Yangın Kapısı"
             loading="lazy"
             width="300"
             height="300"
             onerror="this.src='${product.fallbackImage}'; this.alt='${product.name} Yangın Kapısı Örneği';">
      </div>
      <div class="product-info">
        <h3 class="product-title">${product.name}</h3>
        <div class="product-features">${product.features}</div>
        <div style="font-size: 0.8rem; color: #6b7280; margin-top: 0.25rem;">${product.colorInfo}</div>
      </div>
    `;

    return card;
  }

