---
// src/pages/yangina-dayanikli-kapilar.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

// Dynamic URL'ler için base setup
const baseUrl = Astro.site?.toString().slice(0, -1) || 'https://kapi-ureticileri.netlify.app';
const currentUrl = `${baseUrl}${Astro.url.pathname}`;

const breadcrumbItems = [
  { name: "Ana Sayfa", href: "/" },
  { name: "Ürünlerimiz", href: "/urunlerimiz" },
  { name: "Yangına Dayanıklı Kapılar", href: "/yangina-dayanikli-kapilar" }
];

// SEO Schema
const yanginaSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Yangına Dayanıklı Kapılar - Yangın Güvenlik Serisi",
  "description": "Kayseri'den üretilen yangın güvenlik standartlarına uygun yangına dayanıklı kapı modelleri. EI-30, EI-60, EI-90 sertifikalı, TSE onaylı.",
  "url": currentUrl,
  "mainEntity": {
    "@type": "ItemList",
    "name": "Yangına Dayanıklı Kapı Modelleri",
    "numberOfItems": 8,
    "itemListElement": [
      {
        "@type": "Product",
        "name": "Yangına Dayanıklı Kapı",
        "manufacturer": {
          "@type": "Organization",
          "name": "CihanPan Door",
          "url": baseUrl,
          "logo": `${baseUrl}/assets/img/logo.webp`
        },
        "category": "Yangın Kapısı",
        "material": "Yangın Dayanımlı Çelik",
        "brand": "CihanPan Door"
      }
    ]
  }
};

// Organization Schema
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "CihanPan Door",
  "url": baseUrl,
  "logo": `${baseUrl}/assets/img/logo.webp`,
  "description": "Kayseri'den yangın güvenlik standartlarına uygun yangına dayanıklı kapı üreticisi - EI-30, EI-60, EI-90 sertifikalı",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Kayseri",
    "addressCountry": "TR"
  },
  "areaServed": ["Turkey", "Europe", "Middle East"],
  "serviceType": ["Yangın Kapısı Üretimi", "Yangın Güvenlik Çözümleri", "Toptan Satış", "İhracat"]
};

// Breadcrumb Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.href ? `${baseUrl}${item.href}` : currentUrl
  }))
};
---

<Layout
  title="Yangına Dayanıklı Kapılar | Yangın Güvenlik Serisi Kayseri CihanPan Door"
  description="Kayseri'nin yangın güvenlik standartlarına uygun yangına dayanıklı kapı koleksiyonu. EI-30, EI-60, EI-90 sertifikalı, TSE onaylı, üretici fiyat avantajı."
  keywords="yangın kapısı, yangına dayanıklı kapı, yangın güvenlik kapısı, EI-30 kapı, EI-60 kapı, kayseri yangın kapısı üreticisi, TSE onaylı yangın kapısı"
  canonical={currentUrl}
  ogImage="/assets/img/og/yangina-dayanikli-kapilar-og.webp"

  // Open Graph Tags
  ogTitle="Yangına Dayanıklı Kapılar - Yangın Güvenlik Serisi | CihanPan Door"
  ogDescription="Yangın güvenlik standartlarına uygun yangına dayanıklı kapı koleksiyonu. EI-30, EI-60, EI-90 sertifikalı, TSE onaylı."
  ogType="website"
  ogUrl={currentUrl}

  // Twitter Card Tags
  twitterCard="summary_large_image"
  twitterTitle="Yangına Dayanıklı Kapılar | Yangın Güvenlik Serisi"
  twitterDescription="Yangın güvenlik standartlarına uygun yangına dayanıklı kapı koleksiyonu. Sertifikalı ve güvenli çözümler."
  twitterImage="/assets/img/og/yangina-dayanikli-kapilar-og.webp"

  schema={[yanginaSchema, organizationSchema, breadcrumbSchema]}
>

  <Header />
  <Breadcrumbs items={breadcrumbItems} />

  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">Yangına Dayanıklı Kapılar</h1>
          <p class="hero-subtitle">
            Yangın güvenlik standartlarına uygun sertifikalı kapı koleksiyonumuz
          </p>
          <div class="hero-badges">
            <span class="badge">8 Model</span>
            <span class="badge">TSE Onaylı</span>
            <span class="badge">EI Sertifikalı</span>
            <span class="badge">Yangın Güvenliği</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Products Section -->
    <section class="products-section">
      <div class="container">
        <header class="section-header">
          <h2>Yangına Dayanıklı Kapı Modelleri</h2>
          <p>Yangın güvenlik standartlarına uygun sertifikalı kapı çözümleri</p>
        </header>

        <div class="quote-button-section">
          <button class="btn-quote-main" onclick="openQuoteModal()" aria-label="Yangın kapısı için toptan fiyat teklifi al">
            Yangın Güvenlik Projesi Teklifi Al
          </button>
        </div>

<div class="product-filter-tabs">
  <a href="/urunlerimiz" class="product-filter-btn">
    <span>Tümü</span>
  </a>
  <a href="/pvc-kapilar" class="product-filter-btn">
    <span>PVC Kapılar</span>
  </a>
  <a href="/laminoks-kapilar" class="product-filter-btn">
    <span>Laminoks Kapılar</span>
  </a>
  <a href="/elitpan-kapilar" class="product-filter-btn">
    <span>Elitpan Kapılar</span>
  </a>
  <a href="/hastane-kapilari" class="product-filter-btn">
    <span>Hastane Kapıları</span>
  </a>
  <a href="/otel-kapilari" class="product-filter-btn">
    <span>Otel Kapıları</span>
  </a>
  <a href="/yangina-dayanikli-kapilar" class="product-filter-btn active">
    <span>Yangına Dayanıklı Kapılar</span>
  </a>
</div>

        <div class="products-grid" id="productsGrid">
          <!-- Products will be loaded here -->
        </div>

        <div class="loading" id="loading">
          <div class="loading-spinner"></div>
          <p>Yangın kapısı modelleri yükleniyor...</p>
        </div>
      </div>
    </section>

    <!-- Product Highlights -->
    <section class="highlights-section">
      <div class="container">
        <div class="content-grid">
          <article class="highlights-content">
            <header>
              <h2>Yangına Dayanıklı Kapılarımızın Özel Özellikleri</h2>
            </header>

            <p>
              <strong>Yangın güvenlik serisi</strong> kapılarımız, bina güvenlik gereksinimlerini
              karşılamak için tasarlanmış <em>TSE onaylı ve EI sertifikalı</em> profesyonel
              çözümlerdir. Her model yangın yönetmeliklerine uygun olarak üretilir.
            </p>

            <h3>Yangın Güvenliği İçin Özel Özellikler</h3>
            <ul class="advantages-list">
              <li><strong>Yangın Dayanımı:</strong> EI-30, EI-60, EI-90 sertifikalı modeller</li>
              <li><strong>TSE Onaylı:</strong> Türk Standartları Enstitüsü sertifikası</li>
              <li><strong>Duman Sızdırmazlık:</strong> Duman geçişini engelleyen conta sistemi</li>
              <li><strong>Otomatik Kapanma:</strong> Yangın anında otomatik kapanan sistem</li>
              <li><strong>Isı Yalıtımı:</strong> Yangın sırasında ısı transferini engelleyen yapı</li>
              <li><strong>Çelik Konstrüksiyon:</strong> Yüksek sıcaklığa dayanıklı çelik yapı</li>
            </ul>

            <h3>Kullanım Alanları</h3>
            <p>Yangına dayanıklı kapılarımız şu alanlarda kullanım için uygundur:</p>
            <ul class="advantages-list">
              <li><strong>AVM ve İş Merkezleri:</strong> Yangın yönetmeliği gereksinimleri</li>
              <li><strong>Hastaneler:</strong> Hasta güvenliği için kritik alanlar</li>
              <li><strong>Oteller:</strong> Misafir güvenliği standartları</li>
              <li><strong>Fabrikalar:</strong> Endüstriyel yangın güvenliği</li>
              <li><strong>Apartmanlar:</strong> Ortak alan güvenliği</li>
              <li><strong>Kamu Binaları:</strong> Resmi bina standartları</li>
            </ul>

            <h3>Kalite Standartları</h3>
            <p>Tüm yangın kapılarımız TSE standartlarına ve TS EN 1634-1 normuna uygun olarak
            üretilir. Yangın güvenlik testlerinden geçmiş, sertifikalı ürünlerdir.
            Uluslararası projelerde de tercih edilir.</p>
          </article>

          <aside class="highlights-sidebar">
            <div class="info-cards">
              <div class="stat-card">
                <div class="stat-number">8</div>
                <div class="stat-label">MODEL</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">TSE</div>
                <div class="stat-label">ONAY</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">EI-90</div>
                <div class="stat-label">SERTİFİKA</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">A+</div>
                <div class="stat-label">GÜVENLİK</div>
              </div>
            </div>

            <div class="quick-contact">
              <h3>Yangın Güvenlik Danışmanlığı</h3>
              <p>Projeniz için özel çözümler:</p>
              <div class="contact-buttons">
                <a href="tel:+905441690038" class="btn-contact-phone">🔥 Yangın Uzmanı</a>
                <a href="https://wa.me/905441690038" class="btn-contact-whatsapp">💬 WhatsApp</a>
              </div>

              <div class="special-features">
                <h4>Özel Hizmetler</h4>
                <ul>
                  <li>✓ Yangın test raporu</li>
                  <li>✓ TSE sertifikası</li>
                  <li>✓ Proje bazlı özelleştirme</li>
                  <li>✓ Montaj ve bakım desteği</li>
                </ul>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </section>

    <!-- Technical Specifications -->
    <section class="technical-section">
      <div class="container">
        <h2>Teknik Özellikler</h2>
        <div class="tech-grid">
          <div class="tech-card">
            <h3>Malzeme Özellikleri</h3>
            <ul>
              <li>Yangın dayanımlı çelik kasa</li>
              <li>Mineral yünlü dolgu</li>
              <li>Duman sızdırmaz conta</li>
              <li>Isı dayanımlı boya</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Sertifika Seçenekleri</h3>
            <ul>
              <li>EI-30: 30 dakika yangın dayanımı</li>
              <li>EI-60: 60 dakika yangın dayanımı</li>
              <li>EI-90: 90 dakika yangın dayanımı</li>
              <li>TSE onaylı tüm modeller</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Boyut Seçenekleri</h3>
            <ul>
              <li>Standart: 80cm x 200cm</li>
              <li>Geniş: 90cm x 200cm</li>
              <li>Çift kanat: 140cm x 200cm</li>
              <li>Özel ölçü üretimi mevcut</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Aksesuarlar</h3>
            <ul>
              <li>Yangın menteşeleri</li>
              <li>Otomatik kapama sistemi</li>
              <li>Panik bar seçeneği</li>
              <li>Duman sızdırmaz eşik</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <h2>Projeniz İçin Yangın Güvenlik Çözümleri</h2>
        <p>AVM, hastane, otel ve tüm ticari binalar için yangın güvenlik standartlarına uygun kapı koleksiyonumuzla projelerinizi güvenle tamamlayın</p>
        <div class="cta-buttons">
          <a href="tel:+905441690038" class="btn btn-tertiary">🔥 Yangın Uzmanı Ara</a>
          <a href="/iletisim" class="btn btn-primary">Yangın Güvenlik Danışmanlığı</a>
        </div>
      </div>
    </section>
  </main>

  <!-- Quote Modal -->
  <div class="modal" id="quoteModal" role="dialog" aria-labelledby="quoteModalTitle" aria-hidden="true">
    <div class="modal-content">
      <button class="modal-close" id="quoteModalClose" aria-label="Modalı kapat">&times;</button>
      <div class="modal-body">
        <h3 id="quoteModalTitle">Yangına Dayanıklı Kapı - Güvenlik Projesi Teklifi</h3>
        <form id="quoteForm" class="quote-form" name="yangin-quote" method="POST" data-netlify="true">
          <input type="hidden" name="form-name" value="yangin-quote">

          <div class="form-group">
            <label for="customerName">Adınız Soyadınız *</label>
            <input type="text" id="customerName" name="customerName" required>
          </div>

          <div class="form-group">
            <label for="customerPhone">Telefon Numaranız *</label>
            <input type="tel" id="customerPhone" name="customerPhone" required>
          </div>

          <div class="form-group">
            <label for="customerEmail">E-posta Adresiniz *</label>
            <input type="email" id="customerEmail" name="customerEmail" required>
          </div>

          <div class="form-group">
            <label for="customerCompany">Firma/Kurum Adı</label>
            <input type="text" id="customerCompany" name="customerCompany">
          </div>

          <div class="form-group">
            <label for="doorCount">Kaç Adet Kapı?</label>
            <select id="doorCount" name="doorCount">
              <option value="5-10">5-10 Adet</option>
              <option value="10-25">10-25 Adet</option>
              <option value="25-50">25-50 Adet</option>
              <option value="50-100">50-100 Adet</option>
              <option value="100+">100+ Adet</option>
              <option value="bina-kompleksi">Bina Kompleksi</option>
            </select>
          </div>

          <div class="form-group">
            <label for="projectType">Proje Türü</label>
            <select id="projectType" name="projectType">
              <option value="">Seçiniz</option>
              <option value="avm">AVM / Alışveriş Merkezi</option>
              <option value="otel">Otel</option>
              <option value="hastane">Hastane</option>
              <option value="fabrika">Fabrika</option>
              <option value="is-merkezi">İş Merkezi</option>
              <option value="apartman">Apartman</option>
              <option value="kamu-binasi">Kamu Binası</option>
              <option value="egitim">Eğitim Kurumu</option>
              <option value="diger">Diğer</option>
            </select>
          </div>

          <div class="form-group">
            <label for="fireRating">Yangın Dayanım Süresi</label>
            <select id="fireRating" name="fireRating">
              <option value="">Seçiniz</option>
              <option value="EI-30">EI-30 (30 dakika)</option>
              <option value="EI-60">EI-60 (60 dakika)</option>
              <option value="EI-90">EI-90 (90 dakika)</option>
              <option value="karmasik">Karışık (Farklı süreler)</option>
            </select>
          </div>

          <div class="form-group">
            <label for="specialRequirements">Özel Gereksinimler</label>
            <div class="checkbox-group">
              <label><input type="checkbox" name="tseSertifikasi" value="1"> TSE sertifikası</label>
              <label><input type="checkbox" name="otomatikKapanma" value="1"> Otomatik kapanma sistemi</label>
              <label><input type="checkbox" name="panikBar" value="1"> Panik bar</label>
              <label><input type="checkbox" name="dumanKontrolu" value="1"> Duman kontrolü</label>
              <label><input type="checkbox" name="camPanel" value="1"> Cam panel</label>
            </div>
          </div>

          <div class="form-group">
            <label for="customerMessage">Proje Detayları</label>
            <textarea id="customerMessage" name="customerMessage" rows="4" placeholder="Binanın türü, kat sayısı, özel gereksinimler, zaman çizelgesi..."></textarea>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn-submit">Yangın Güvenlik Teklifi Gönder</button>
            <button type="button" class="btn-cancel" onclick="closeQuoteModal()">İptal</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <Footer />
</Layout>

<style>
  /* Base styles */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Hero Section - Yangın teması */
  .hero {
    padding: 4rem 0;
    background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
    color: white;
    text-align: center;
  }

  .hero-title {
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    opacity: 0.95;
    max-width: 800px;
    margin: 0 auto 2rem;
    line-height: 1.6;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
  }

  .hero-badges {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .badge {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  /* Products Section */
  .products-section {
    padding: 4rem 0;
    background: #ffffff;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #1a202c;
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.1rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
  }

  .quote-button-section {
    text-align: center;
    margin-bottom: 3rem;
  }

  .btn-quote-main {
    background: linear-gradient(135deg, #dc2626, #991b1b);
    color: white;
    border: none;
    padding: 1rem 3rem;
    border-radius: 50px;
    cursor: pointer;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(220, 38, 38, 0.3);
  }

  .btn-quote-main:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(220, 38, 38, 0.4);
  }

  /* Product Filters */
  .product-filter-tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .product-filter-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 30px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 600;
    font-size: 1rem;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    position: relative;
    overflow: hidden;
    text-decoration: none;
    display: inline-block;
  }

  .product-filter-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
    transition: left 0.3s ease;
    z-index: 1;
  }

  .product-filter-btn span {
    position: relative;
    z-index: 2;
  }

  .product-filter-btn:hover::before {
    left: 0;
  }

  .product-filter-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(220, 38, 38, 0.4);
  }

  .product-filter-btn.active {
    background: linear-gradient(135deg, #b91c1c 0%, #7f1d1d 100%);
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(185, 28, 28, 0.4);
  }

  /* Products Grid */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    justify-items: center;
  }

  .product-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    width: 280px;
    display: flex;
    flex-direction: column;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }

  .product-card:hover {
    border-color: #dc2626;
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(220, 38, 38, 0.15);
  }

  .product-image {
    height: 280px;
    width: 100%;
    background: #f8fafc;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
  }

  .product-image img {
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
    transition: transform 0.3s ease;
    border-radius: 8px;
  }

  .product-card:hover .product-image img {
    transform: scale(1.05);
  }

  .product-info {
    padding: 1.5rem;
    text-align: center;
    background: white;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .product-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: #111827;
    line-height: 1.4;
    margin: 0;
  }

  .product-features {
    margin-top: 0.5rem;
    font-size: 0.85rem;
    color: #dc2626;
    font-weight: 500;
  }

  /* Loading */
  .loading {
    text-align: center;
    padding: 3rem;
    color: #6b7280;
  }

  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #f3f4f6;
    border-top: 4px solid #dc2626;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

