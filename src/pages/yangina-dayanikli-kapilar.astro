        `);

        window.location.href = `mailto:exportcihanpandoor@gmail.com?subject=${subject}&body=${body}`;
        alert('Form e-posta ile gönderildi. Yangın güvenlik projeniz için en kısa sürede size dönüş yapacağız.');
        closeQuoteModal();

      } finally {
        const submitBtn = e.target.querySelector('.btn-submit');
        if (submitBtn) {
          submitBtn.textContent = 'Yangın Güvenlik Teklifi Gönder';
          submitBtn.disabled = false;
        }
      }
    });

    // Modal close events
