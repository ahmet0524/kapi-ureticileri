  function openQuoteModal() {
    const modal = document.getElementById('quoteModal');
    modal.classList.add('active');
    modal.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';

    setTimeout(() => {
      document.getElementById('customerName').focus();
    }, 100);
  }

  function closeQuoteModal() {
    const modal = document.getElementById('quoteModal');
    modal.classList.remove('active');
    modal.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
    document.getElementById('quoteForm').reset();
  }

  // Event listeners and initialization
  document.addEventListener('DOMContentLoaded', () => {
    renderProducts();

    // Quote form submission
    document.getElementById('quoteForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      // Checkbox değerlerini topla
      const specialReqs = [];
      if (formData.get('tseSertifikasi')) specialReqs.push('TSE sertifikası');
      if (formData.get('otomatikKapanma')) specialReqs.push('Otomatik kapanma sistemi');
      if (formData.get('panikBar')) specialReqs.push('Panik bar');
      if (formData.get('dumanKontrolu')) specialReqs.push('Duman kontrolü');
      if (formData.get('camPanel')) specialReqs.push('Cam panel');

      // Validate required fields
      if (!data.customerName || !data.customerPhone || !data.customerEmail) {
        alert('Lütfen zorunlu alanları doldurunuz (Ad Soyad, Telefon ve E-posta)');
        return;
      }

      try {
        const submitBtn = e.target.querySelector('.btn-submit');
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Gönderiliyor...';
        submitBtn.disabled = true;

        // Netlify Forms ile form gönderimi
        const response = await fetch(window.location.pathname, {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: new URLSearchParams(formData).toString()
        });

        if (response.ok) {
          alert('Yangın kapısı proje talebiniz alındı! Yangın güvenlik uzmanımız en kısa sürede size dönüş yapacak.');
          closeQuoteModal();
        } else {
          throw new Error('Form gönderim hatası');
        }

      } catch (error) {
        // Fallback - Email ile gönderim
        const subject = encodeURIComponent('Yangına Dayanıklı Kapı - Güvenlik Projesi Teklifi - CihanPan Door');
        const body = encodeURIComponent(`
Yangın Kapısı Güvenlik Projesi Talebi:
━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
👤 Ad Soyad: ${data.customerName}
