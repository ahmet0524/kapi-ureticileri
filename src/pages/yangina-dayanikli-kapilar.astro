    const fireRating = parts[4]; // EI30, EI60, EI90
    const colorInfo = parts[5]; // Beyaz, Antrasit, etc.

    // Format display name
    const displayName = `Yangın ${modelNumber}`;
    const colorName = colorInfo.replace(/-/g, ' ');
    const fireRatingText = fireRating.replace('EI', 'EI-');

    yanginModels.push({
      id: `yangin-${modelNumber}`,
      name: displayName,
      category: 'yangin',
      fireRating: fireRating,

      // Use actual file name
      image: `/assets/img/yangina-dayanikli-kapilar/${fileName}`,
      fallbackImage: `https://picsum.photos/300/400?random=${index + 600}`,

      // SEO için zenginleştirilmiş alt text
      altText: `CihanPan Door Yangına Dayanıklı Kapı Model ${modelNumber} ${colorName} ${fireRatingText} Sertifikalı - TSE Onaylı Yangın Kapısı`,

      // Ürün özellikleri
      features: `${fireRatingText} • TSE Onaylı`,
      colorInfo: colorName,

      // SEO için detaylı description
      description: `Yangın kapısı model ${modelNumber} ${colorName}. ${fireRatingText} yangın dayanım sertifikası ile TSE onaylı. Bina yangın güvenliği için profesyonel çözüm. Kayseri üretimi, toptan satış avantajı.`,

      // SEO keywords
      seoKeywords: `yangın kapısı model ${modelNumber}, ${fireRatingText} yangın kapısı, TSE onaylı yangın kapısı, yangın güvenlik kapısı ${colorName.toLowerCase()}, kayseri yangın kapısı üreticisi`,

      // Schema.org için yapısal data
      schemaData: {
        "@type": "Product",
        "name": `Yangın Kapısı Model ${modelNumber} - ${colorName} ${fireRatingText}`,
        "description": `${fireRatingText} yangın dayanım sertifikalı yangın güvenlik kapısı`,
        "brand": "CihanPan Door",
        "material": "Yangın Dayanımlı Çelik",
        "category": "Yangına Dayanıklı Kapılar",
        "color": colorName
