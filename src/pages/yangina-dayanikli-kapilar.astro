<script>
  const yanginModels = [];

  const fileNames = [
    "CihanpanDoor-Yangin-Serisi-601-EI30-Beyaz.webp",
    "CihanpanDoor-Yangin-Serisi-602-EI60-Antrasit.webp",
    "CihanpanDoor-Yangin-Serisi-603-EI90-Gri.webp",
    "CihanpanDoor-Yangin-Serisi-604-EI30-Ceviz.webp",
    "CihanpanDoor-Yangin-Serisi-605-EI60-Meşe.webp",
    "CihanpanDoor-Yangin-Serisi-606-EI90-Wenge.webp",
    "CihanpanDoor-Yangin-Serisi-607-EI30-Kapucino.webp",
    "CihanpanDoor-Yangin-Serisi-608-EI60-Siyah.webp"
  ];

  fileNames.forEach((fileName, index) => {
    const parts = fileName.replace('.webp', '').split('-');
    const modelNumber = parts[3];
    const fireRating = parts[4];
    const colorInfo = parts[5];

    const displayName = `Yangın ${modelNumber}`;
    const colorName = colorInfo.replace(/-/g, ' ');
    const fireRatingText = fireRating.replace('EI', 'EI-');

    yanginModels.push({
      id: `yangin-${modelNumber}`,
      name: displayName,
      category: 'yangin',
      fireRating: fireRating,
      image: `/assets/img/yangina-dayanikli-kapilar/${fileName}`,
      fallbackImage: `https://picsum.photos/300/400?random=${index + 600}`,
      altText: `CihanPan Door Yangına Dayanıklı Kapı Model ${modelNumber} ${colorName} ${fireRatingText} Sertifikalı - TSE Onaylı Yangın Kapısı`,
      features: `${fireRatingText} • TSE Onaylı`,
      colorInfo: colorName,
      description: `Yangın kapısı model ${modelNumber} ${colorName}. ${fireRatingText} yangın dayanım sertifikası ile TSE onaylı. Bina yangın güvenliği için profesyonel çözüm. Kayseri üretimi, toptan satış avantajı.`,
      seoKeywords: `yangın kapısı model ${modelNumber}, ${fireRatingText} yangın kapısı, TSE onaylı yangın kapısı, yangın güvenlik kapısı ${colorName.toLowerCase()}, kayseri yangın kapısı üreticisi`,
      schemaData: {
        "@type": "Product",
        "name": `Yangın Kapısı Model ${modelNumber} - ${colorName} ${fireRatingText}`,
        "description": `${fireRatingText} yangın dayanım sertifikalı yangın güvenlik kapısı`,
        "brand": "CihanPan Door",
        "material": "Yangın Dayanımlı Çelik",
        "category": "Yangına Dayanıklı Kapılar",
        "color": colorName
      }
    });
  });

  function renderProducts() {
    const grid = document.getElementById('productsGrid');
    const loading = document.getElementById('loading');

    loading.style.display = 'block';
    grid.innerHTML = '';

    setTimeout(() => {
      if (yanginModels.length === 0) {
        grid.innerHTML = `
          <div style="grid-column: 1/-1; text-align: center; padding: 3rem;">
            <h3 style="color: #6b7280; margin-bottom: 1rem;">Bu kategoride henüz ürün bulunmuyor</h3>
            <p style="color: #9ca3af;">Yakında yeni yangın kapısı modelleri eklenecek.</p>
          </div>
        `;
      } else {
        yanginModels.forEach((product) => {
          const card = createProductCard(product);
          grid.appendChild(card);
        });
      }

      loading.style.display = 'none';
    }, 300);
  }

  function createProductCard(product) {
    const card = document.createElement('article');
    card.className = 'product-card';
    card.setAttribute('aria-label', `${product.name} ${product.colorInfo} yangın kapısı modeli`);

    card.innerHTML = `
      <div class="product-image">
        <img src="${product.image}"
             alt="${product.altText}"
             title="${product.name} ${product.colorInfo} - CihanPan Door Yangın Kapısı"
             loading="lazy"
             width="300"
             height="300"
             onerror="this.src='${product.fallbackImage}'; this.alt='${product.name} Yangın Kapısı Örneği';">
      </div>
      <div class="product-info">
        <h3 class="product-title">${product.name}</h3>
        <div class="product-features">${product.features}</div>
        <div style="font-size: 0.8rem; color: #6b7280; margin-top: 0.25rem;">${product.colorInfo}</div>
      </div>
    `;

    return card;
  }

  document.addEventListener('DOMContentLoaded', () => {
    renderProducts();
  });
</script>
