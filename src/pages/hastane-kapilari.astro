---
// src/pages/hastane-kapilar.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

// Dynamic URL'ler için base setup
const baseUrl = Astro.site?.toString().slice(0, -1) || 'https://kapi-ureticileri.vercel.app';
const currentUrl = `${baseUrl}${Astro.url.pathname}`;

const breadcrumbItems = [
  { name: "Ana Sayfa", href: "/" },
  { name: "Ürünlerimiz", href: "/urunlerimiz" },
  { name: "Hastane Kapıları", href: "/hastane-kapilar" }
];

// SEO Schema
const hastaneSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Hastane Kapıları - Medikal Seri",
  "description": "Kayseri'den üretilen hastane ve sağlık tesisleri için özel tasarlanmış kapı modelleri. Antibakteriyel özellikli, hijyen standartlarına uygun.",
  "url": currentUrl,
  "mainEntity": {
    "@type": "ItemList",
    "name": "Hastane Kapı Modelleri",
    "numberOfItems": 6,
    "itemListElement": [
      {
        "@type": "Product",
        "name": "Hastane Kapısı",
        "manufacturer": {
          "@type": "Organization",
          "name": "CihanPan Door",
          "url": baseUrl,
          "logo": `${baseUrl}/assets/img/logo.webp`
        },
        "category": "Hastane Kapısı",
        "material": "Antibakteriyel Laminat",
        "brand": "CihanPan Door"
      }
    ]
  }
};

// Organization Schema
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "CihanPan Door",
  "url": baseUrl,
  "logo": `${baseUrl}/assets/img/logo.webp`,
  "description": "Kayseri'den hastane ve sağlık tesisleri için özel kapı üreticisi - Antibakteriyel özellikli, hijyen standartlarına uygun",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Kayseri",
    "addressCountry": "TR"
  },
  "areaServed": ["Turkey", "Europe", "Middle East"],
  "serviceType": ["Hastane Kapı Üretimi", "Medikal Kapı Çözümleri", "Toptan Satış", "İhracat"]
};

// Breadcrumb Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.href ? `${baseUrl}${item.href}` : currentUrl
  }))
};
---

<Layout
  title="Hastane Kapıları | Medikal Seri Kayseri CihanPan Door"
  description="Kayseri'nin hastane ve sağlık tesisleri için özel tasarlanmış kapı koleksiyonu. Antibakteriyel özellikli, hijyen standartlarına uygun, üretici fiyat avantajı."
  keywords="hastane kapısı, medikal kapı, antibakteriyel kapı, sağlık tesisi kapısı, kayseri hastane kapısı üreticisi, hijyenik kapı çözümleri"
  canonical={currentUrl}
  ogImage="/assets/img/og/hastane-kapilar-og.webp"

  // Open Graph Tags
  ogTitle="Hastane Kapıları - Medikal Seri | CihanPan Door"
  ogDescription="Hastane ve sağlık tesisleri için özel tasarlanmış kapı koleksiyonu. Antibakteriyel özellikli, hijyen standartlarına uygun."
  ogType="website"
  ogUrl={currentUrl}

  // Twitter Card Tags
  twitterCard="summary_large_image"
  twitterTitle="Hastane Kapıları | Medikal Seri"
  twitterDescription="Sağlık tesisleri için özel tasarlanmış kapı koleksiyonu. Antibakteriyel ve hijyenik çözümler."
  twitterImage="/assets/img/og/hastane-kapilar-og.webp"

  schema={[hastaneSchema, organizationSchema, breadcrumbSchema]}
>

  <Header />
  <Breadcrumbs items={breadcrumbItems} />

  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">Hastane Kapıları</h1>
          <p class="hero-subtitle">
            Sağlık tesisleri için özel tasarlanmış antibakteriyel kapı koleksiyonumuz
          </p>
          <div class="hero-badges">
            <span class="badge">6 Model</span>
            <span class="badge">Antibakteriyel</span>
            <span class="badge">Hijyenik</span>
            <span class="badge">Medikal Standart</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Products Section -->
    <section class="products-section">
      <div class="container">
        <header class="section-header">
          <h2>Hastane Kapı Modelleri</h2>
          <p>Sağlık tesisleri için özel tasarlanmış hijyenik kapı çözümleri</p>
        </header>

        <div class="quote-button-section">
          <button class="btn-quote-main" onclick="openQuoteModal()" aria-label="Hastane kapısı için toptan fiyat teklifi al">
            Medikal Proje Teklifi Al
          </button>
        </div>

<div class="product-filter-tabs">
  <a href="/urunlerimiz" class="product-filter-btn">
    <span>Tümü</span>
  </a>
  <a href="/pvc-kapilar" class="product-filter-btn">
    <span>PVC Kapılar</span>
  </a>
  <a href="/laminoks-kapilar" class="product-filter-btn">
    <span>Laminoks Kapılar</span>
  </a>
  <a href="/elitpan-kapilar" class="product-filter-btn">
    <span>Elitpan Kapılar</span>
  </a>
  <a href="/hastane-kapilari" class="product-filter-btn active">
    <span>Hastane Kapıları</span>
  </a>
  <a href="/otel-kapilari" class="product-filter-btn">
    <span>Otel Kapıları</span>
  </a>
  <a href="/yangina-dayanikli-kapilar" class="product-filter-btn">
    <span>Yanmaya Dayanıklı Kapılar</span>
  </a>
</div>

        <div class="products-grid" id="productsGrid">
          <!-- Products will be loaded here -->
        </div>

        <div class="loading" id="loading">
          <div class="loading-spinner"></div>
          <p>Hastane kapı modelleri yükleniyor...</p>
        </div>
      </div>
    </section>

    <!-- Product Highlights -->
    <section class="highlights-section">
      <div class="container">
        <div class="content-grid">
          <article class="highlights-content">
            <header>
              <h2>Hastane Kapılarımızın Özel Özellikleri</h2>
            </header>

            <p>
              <strong>Medikal serisi</strong> kapılarımız, sağlık tesislerinin özel gereksinimlerini
              karşılamak için tasarlanmış <em>antibakteriyel ve hijyenik özellikli</em> profesyonel
              çözümlerdir. Her model sağlık standartlarına uygun olarak üretilir.
            </p>

            <h3>Sağlık Tesisleri İçin Özel Özellikler</h3>
            <ul class="advantages-list">
              <li><strong>Antibakteriyel Yüzey:</strong> Bakteri ve virüs oluşumunu önleyen özel kaplama</li>
              <li><strong>Kolay Temizlik:</strong> Dezenfektan ile temizlenebilir yüzey</li>
              <li><strong>Dayanıklılık:</strong> Yoğun kullanıma uygun özel yapı</li>
              <li><strong>Ses İzolasyonu:</strong> Hasta konforu için gelişmiş ses yalıtımı</li>
              <li><strong>Yangın Dayanımı:</strong> Sağlık tesisleri güvenlik standartlarına uygun</li>
              <li><strong>Çarpma Dayanımı:</strong> Sedye ve tıbbi ekipman geçişine uygun</li>
            </ul>

            <h3>Kullanım Alanları</h3>
            <p>Hastane kapılarımız şu alanlarda kullanım için uygundur:</p>
            <ul class="advantages-list">
              <li><strong>Hasta Odaları:</strong> Konforlu ve hijyenik hasta ortamı</li>
              <li><strong>Ameliyathaneler:</strong> Steril ortam gereksinimleri</li>
              <li><strong>Poliklinikler:</strong> Yoğun hasta trafiğine dayanıklı</li>
              <li><strong>Laboratuvarlar:</strong> Kimyasal dayanıklılık</li>
              <li><strong>Eczaneler:</strong> Profesyonel görünüm</li>
              <li><strong>Özel Klinikler:</strong> Prestijli tasarım seçenekleri</li>
            </ul>

            <h3>Kalite Standartları</h3>
            <p>Tüm hastane kapılarımız TSE standartlarına uygun olarak üretilir ve
            sağlık tesislerinin hijyen gereksinimlerini karşılar. İhracat kalitesinde
            üretim ile uluslararası projelerde de tercih edilir.</p>
          </article>

          <aside class="highlights-sidebar">
            <div class="info-cards">
              <div class="stat-card">
                <div class="stat-number">6</div>
                <div class="stat-label">MODEL</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">TSE</div>
                <div class="stat-label">STANDART</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">A+</div>
                <div class="stat-label">HİJYEN</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">24/7</div>
                <div class="stat-label">DAYANIM</div>
              </div>
            </div>

            <div class="quick-contact">
              <h3>Medikal Proje Danışmanlığı</h3>
              <p>Sağlık tesisiniz için özel çözümler:</p>
              <div class="contact-buttons">
                <a href="tel:+905441690038" class="btn-contact-phone">🏥 Hastane Uzmanı</a>
                <a href="https://wa.me/905441690038" class="btn-contact-whatsapp">💬 WhatsApp</a>
              </div>

              <div class="special-features">
                <h4>Özel Hizmetler</h4>
                <ul>
                  <li>✓ Antibakteriyel test raporu</li>
                  <li>✓ Hijyen sertifikası</li>
                  <li>✓ Proje bazlı özelleştirme</li>
                  <li>✓ Teknik destek</li>
                </ul>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </section>

    <!-- Technical Specifications -->
    <section class="technical-section">
      <div class="container">
        <h2>Teknik Özellikler</h2>
        <div class="tech-grid">
          <div class="tech-card">
            <h3>Malzeme Özellikleri</h3>
            <ul>
              <li>Antibakteriyel laminat yüzey</li>
              <li>MDF çekirdek yapı</li>
              <li>Nem dirençli kenar bandı</li>
              <li>Çelik kapı kasası seçeneği</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Boyut Seçenekleri</h3>
            <ul>
              <li>Standart: 70cm x 200cm</li>
              <li>Geniş: 80cm x 200cm</li>
              <li>Çift kanat: 140cm x 200cm</li>
              <li>Özel ölçü üretimi mevcut</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Renk Seçenekleri</h3>
            <ul>
              <li>Beyaz (Hastane standartı)</li>
              <li>Krem tonu</li>
              <li>Açık gri</li>
              <li>Özel renk seçenekleri</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Aksesuarlar</h3>
            <ul>
              <li>Antibakteriyel menteşeler</li>
              <li>Hijyenik kapı kolları</li>
              <li>Otomatik kapanma sistemi</li>
              <li>Cam panel seçenekleri</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <h2>Sağlık Tesisiniz İçin Profesyonel Çözümler</h2>
        <p>Hastane, klinik ve sağlık tesisleri için özel tasarlanmış kapı koleksiyonumuzla projelerinizi güvenilir çözümlerle tamamlayın</p>
        <div class="cta-buttons">
          <a href="tel:+905441690038" class="btn btn-tertiary">🏥 Hastane Uzmanı Ara</a>
          <a href="/iletisim" class="btn btn-primary">Medikal Proje Danışmanlığı</a>
        </div>
      </div>
    </section>
  </main>

  <!-- Quote Modal -->
  <div class="modal" id="quoteModal" role="dialog" aria-labelledby="quoteModalTitle" aria-hidden="true">
    <div class="modal-content">
      <button class="modal-close" id="quoteModalClose" aria-label="Modalı kapat">&times;</button>
      <div class="modal-body">
        <h3 id="quoteModalTitle">Hastane Kapısı - Medikal Proje Teklifi</h3>
        <form id="quoteForm" class="quote-form" name="hastane-quote" method="POST" data-vercel="true">
          <input type="hidden" name="form-name" value="hastane-quote">

          <div class="form-group">
            <label for="customerName">Adınız Soyadınız *</label>
            <input type="text" id="customerName" name="customerName" required>
          </div>

          <div class="form-group">
            <label for="customerPhone">Telefon Numaranız *</label>
            <input type="tel" id="customerPhone" name="customerPhone" required>
          </div>

          <div class="form-group">
            <label for="customerEmail">E-posta Adresiniz *</label>
            <input type="email" id="customerEmail" name="customerEmail" required>
          </div>

          <div class="form-group">
            <label for="customerCompany">Hastane/Kurum Adı</label>
            <input type="text" id="customerCompany" name="customerCompany">
          </div>

          <div class="form-group">
            <label for="doorCount">Kaç Adet Kapı?</label>
            <select id="doorCount" name="doorCount">
              <option value="10-25">10-25 Adet</option>
              <option value="25-50">25-50 Adet</option>
              <option value="50-100">50-100 Adet</option>
              <option value="100+">100+ Adet</option>
              <option value="hastane-kompleksi">Hastane Kompleksi</option>
            </select>
          </div>

          <div class="form-group">
            <label for="projectType">Tesis Türü</label>
            <select id="projectType" name="projectType">
              <option value="">Seçiniz</option>
              <option value="hastane">Hastane</option>
              <option value="ozel-klinik">Özel Klinik</option>
              <option value="poliklinik">Poliklinik</option>
              <option value="eczane">Eczane</option>
              <option value="laboratuvar">Laboratuvar</option>
              <option value="saglik-ocagi">Sağlık Ocağı</option>
              <option value="dis-klinigi">Diş Kliniği</option>
              <option value="veteriner-klinik">Veteriner Klinik</option>
              <option value="diger">Diğer</option>
            </select>
          </div>

          <div class="form-group">
            <label for="specialRequirements">Özel Gereksinimler</label>
            <div class="checkbox-group">
              <label><input type="checkbox" name="antibakteriyel" value="1"> Antibakteriyel özellik</label>
              <label><input type="checkbox" name="yanginDayanimi" value="1"> Yangın dayanımı</label>
              <label><input type="checkbox" name="sesIzolasyon" value="1"> Ses izolasyonu</label>
              <label><input type="checkbox" name="otomatikKapanma" value="1"> Otomatik kapanma</label>
              <label><input type="checkbox" name="camPanel" value="1"> Cam panel</label>
            </div>
          </div>

          <div class="form-group">
            <label for="customerMessage">Proje Detayları</label>
            <textarea id="customerMessage" name="customerMessage" rows="4" placeholder="Tesisinizin büyüklüğü, özel gereksinimler, zaman çizelgesi..."></textarea>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn-submit">Medikal Proje Teklifi Gönder</button>
            <button type="button" class="btn-cancel" onclick="closeQuoteModal()">İptal</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <Footer />
</Layout>

<style>
  /* Base styles */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Hero Section - Medikal tema */
  .hero {
    padding: 4rem 0;
    background: linear-gradient(135deg, #0891b2 0%, #0e7490 100%);
    color: white;
    text-align: center;
  }

  .hero-title {
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    opacity: 0.95;
    max-width: 800px;
    margin: 0 auto 2rem;
    line-height: 1.6;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
  }

  .hero-badges {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .badge {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  /* Products Section */
  .products-section {
    padding: 4rem 0;
    background: #ffffff;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #1a202c;
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.1rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
  }

  .quote-button-section {
    text-align: center;
    margin-bottom: 3rem;
  }

  .btn-quote-main {
    background: linear-gradient(135deg, #0891b2, #0e7490);
    color: white;
    border: none;
    padding: 1rem 3rem;
    border-radius: 50px;
    cursor: pointer;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(8, 145, 178, 0.3);
  }

  .btn-quote-main:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(8, 145, 178, 0.4);
  }

  /* Product Filters */
  .product-filters {
    margin-bottom: 3rem;
  }

  .product-filters h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .product-filter-tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

.product-filter-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 1rem 2rem;
  border-radius: 30px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 600;
  font-size: 1rem;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
  text-decoration: none;        /* YENİ - Link alt çizgisini kaldır */
  display: inline-block;        /* YENİ - Link'i buton gibi göster */
}

  .product-filter-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
    transition: left 0.3s ease;
    z-index: 1;
  }

  .product-filter-btn span {
    position: relative;
    z-index: 2;
  }

  .product-filter-btn:hover::before {
    left: 0;
  }

  .product-filter-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(8, 145, 178, 0.4);
  }

  .product-filter-btn.active {
    background: linear-gradient(135deg, #0d9488 0%, #0f766e 100%);
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(13, 148, 136, 0.4);
  }

  /* Products Grid */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    justify-items: center;
  }

  .product-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    width: 280px;
    display: flex;
    flex-direction: column;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }

  .product-card:hover {
    border-color: #0891b2;
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(8, 145, 178, 0.15);
  }

  .product-image {
    height: 280px;
    width: 100%;
    background: #f8fafc;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
  }

  .product-image img {
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
    transition: transform 0.3s ease;
    border-radius: 8px;
  }

  .product-card:hover .product-image img {
    transform: scale(1.05);
  }

  .product-info {
    padding: 1.5rem;
    text-align: center;
    background: white;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .product-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: #111827;
    line-height: 1.4;
    margin: 0;
  }

  .product-features {
    margin-top: 0.5rem;
    font-size: 0.85rem;
    color: #0891b2;
    font-weight: 500;
  }

  /* Loading */
  .loading {
    text-align: center;
    padding: 3rem;
    color: #6b7280;
  }

  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #f3f4f6;
    border-top: 4px solid #0891b2;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  /* Highlights Section */
  .highlights-section {
    padding: 5rem 0;
    background: #f8fafc;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .highlights-content {
    background: white;
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }

  .highlights-content h2 {
    font-size: 2.25rem;
    font-weight: 800;
