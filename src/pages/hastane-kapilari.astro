    // Format display name
    const displayName = `Hastane ${modelNumber}`;
    const colorName = colorInfo.replace(/-/g, ' ');

    hastaneModels.push({
      id: `hastane-${modelNumber}`,
      name: displayName,
      category: 'hastane',
      subcategory: index < 2 ? 'antibakteriyel' : 'hijyenik', // İlk 2 model antibakteriyel, diğerleri hijyenik

      // Use actual file name
      image: `/assets/img/hastane-kapilari/${fileName}`,
      fallbackImage: `https://picsum.photos/300/400?random=${index + 500}`,

      // SEO için zenginleştirilmiş alt text
      altText: `CihanPan Door Hastane Kapısı Model ${modelNumber} ${colorName} - Antibakteriyel Özellikli Sağlık Tesisi Kapısı`,

