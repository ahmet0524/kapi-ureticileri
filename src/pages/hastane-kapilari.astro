  "url": currentUrl,
  "inLanguage": "tr-TR",
  "mainEntity": {
    "@type": "ItemList",
    "name": "Hastane Kapı Modelleri",
    "numberOfItems": 6,
    "itemListElement": [
      {
        "@type": "Product",
        "name": "Hastane Kapısı - Hijyenik Seri",
        "description": "Antibakteriyel yüzey kaplama, kolay temizlenebilir, çarpma yapmayan, yangın güvenlikli hastane kapısı. Hasta odası, ameliyathane, poliklinik için uygun.",
        "image": `${baseUrl}/assets/images/hastane-kapisi.webp`,
        "manufacturer": {
          "@type": "Organization",
          "name": "CihanPan Door",
          "url": baseUrl,
          "logo": `${baseUrl}/assets/images/logo/header_logo1.webp`
        },
        "category": "Hastane Kapısı",
        "material": "Antibakteriyel PVC/HPL Kaplama",
        "brand": {
          "@type": "Brand",
          "name": "CihanPan Door - Sağlık Serisi"
        },
        "offers": {
          "@type": "AggregateOffer",
