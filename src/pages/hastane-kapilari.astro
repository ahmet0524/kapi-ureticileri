      description: `Hastane kapısı model ${modelNumber} ${colorName}. Sağlık tesisleri için özel tasarlanmış antibakteriyel ve hijyenik özellikli kapı. TSE standartlarına uygun, kolay temizlenebilir yüzey. Kayseri üretimi, toptan satış avantajı.`,

      // SEO keywords
      seoKeywords: `hastane kapısı model ${modelNumber}, antibakteriyel kapı, sağlık tesisi kapısı, hijyenik kapı, medikal kapı ${colorName.toLowerCase()}, kayseri hastane kapısı üreticisi`,

      // Schema.org için yapısal data
      schemaData: {
        "@type": "Product",
        "name": `Hastane Kapısı Model ${modelNumber} - ${colorName}`,
        "description": `Sağlık tesisleri için antibakteriyel özellikli hastane kapısı`,
        "brand": "CihanPan Door",
        "material": "Antibakteriyel Laminat",
        "category": "Hastane Kapıları",
        "color": colorName
      }
    });
  });

