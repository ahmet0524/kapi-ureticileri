        "additionalProperty": [
          {
            "@type": "PropertyValue",
            "name": "Antibakteriyel",
            "value": "Evet"
          },
          {
            "@type": "PropertyValue",
            "name": "Yangın Dayanımı",
            "value": "30-60 dakika"
          },
          {
            "@type": "PropertyValue",
            "name": "Hijyen Sertifikası",
            "value": "CE Belgeli"
          },
          {
            "@type": "PropertyValue",
            "name": "Ses Yalıtımı",
            "value": "32-42 dB"
          }
        ]
      }
    ]
  }
};

// FAQ Schema - Hastane Kapısı Odaklı
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Hastane kapısı neden özel olmalıdır?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Hastane kapıları antibakteriyel, kolay temizlenebilir ve hijyenik olmalıdır. Sık dezenfektan kullanımına dayanıklı, çarpma yapmayan, ses yalıtımlı ve yangın güvenliği olan malzemelerden üretilmelidir. Hasta konforu ve enfeksiyon kontrolü için kritik öneme sahiptir."
      }
    },
    {
      "@type": "Question",
      "name": "Hastane kapısı hangi alanlarda kullanılır?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Hastane kapıları hasta odaları, poliklinikler, ameliyathaneler, laboratuvarlar, röntgen odaları, yoğun bakım, acil servis, sterilizasyon ünitelerinde kullanılır. Her alan için farklı teknik özelliklere sahip modeller mevcuttur."
      }
    },
    {
      "@type": "Question",
      "name": "Hastane kapısı fiyatları ne kadardır?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Hastane kapısı fiyatları kullanım alanına, yangın dayanımına, ses yalıtım değerine ve boyutlara göre değişir. Toptan satış ve proje bazlı özel fiyatlar için bizimle iletişime geçebilirsiniz."
      }
    },
    {
      "@type": "Question",
      "name": "Hastane kapıları hangi sertifikalara sahip olmalıdır?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Hastane kapıları CE belgesi, yangın dayanım sertifikası, antibakteriyel test raporu, ses yalıtım sertifikası ve TSE belgelerine sahip olmalıdır. Sağlık Bakanlığı onaylı ürünler tercih edilmelidir."
      }
    },
    {
      "@type": "Question",
      "name": "Hastane kapıları ne kadar garanti ile sunulur?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Tüm hastane kapılarımız 5 yıl üretici garantisi ile sunulmaktadır. Yoğun kullanım koşullarında dahi dayanıklılık garantisi verilmektedir."
      }
    }
  ]
};

// Organization Schema - Sağlık Tesisleri Odaklı
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "CihanPan Door",
  "url": baseUrl,
  "logo": `${baseUrl}/assets/images/logo/header_logo1.webp`,
  "description": "Kayseri'den hastane ve sağlık tesisleri için özel hijyenik kapı üreticisi. Antibakteriyel, yangın güvenlikli, CE belgeli ürünler. B2B toptan satış ve ihracat.",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Organize Sanayi Bölgesi 29. Sokak No:28",
    "addressLocality": "Kayseri",
    "addressRegion": "Kayseri",
    "postalCode": "38070",
    "addressCountry": "TR"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+90-544-169-0038",
    "contactType": "Sales",
    "availableLanguage": ["Turkish", "English", "German", "Arabic"],
    "areaServed": ["TR", "EU", "ME"]
  },
  "areaServed": [
    {
      "@type": "Country",
      "name": "Turkey"
    },
    {
      "@type": "GeoCircle",
      "geoMidpoint": {
        "@type": "GeoCoordinates",
        "latitude": "38.7312",
        "longitude": "35.4787"
      },
      "geoRadius": "2000000"
    }
  ],
  "serviceType": [
    "Hastane Kapı Üretimi",
    "Sağlık Tesisi Kapı Çözümleri",
    "Antibakteriyel Kapı Üretimi",
    "Yangın Kapısı Üretimi",
    "Toptan Satış",
    "İhracat"
  ],
  "sameAs": [
    "https://www.cihanpandoor.com",
    "https://www.facebook.com/cihanpandoor",
    "https://www.instagram.com/cihanpan_door",
    "https://www.linkedin.com/company/cihanpan-door"
  ]
};

// Breadcrumb Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.href ? `${baseUrl}${item.href}` : currentUrl
  }))
};

const allSchemas = [hastaneKapisiSchema, faqSchema, organizationSchema, breadcrumbSchema];
---
<Layout
  title="Hastane Kapıları | Hijyenik ve Antibakteriyel Seri | CihanPan Door"
  description="Kayseri'den hastane ve sağlık tesisleri için özel tasarlanmış hijyenik kapı modelleri. Antibakteriyel, kolay temizlenebilir, yangın güvenlikli, CE belgeli."
  keywords="hastane kapısı, sağlık tesisi kapısı, antibakteriyel kapı, hijyenik kapı, ameliyathane kapısı, poliklinik kapısı, kayseri hastane kapısı üreticisi"
  canonical={currentUrl}
  ogImage="/assets/img/og/hastane-kapilari-og.webp"
  ogTitle="Hastane Kapıları - Hijyenik ve Antibakteriyel | CihanPan Door"
  ogDescription="Hastane ve sağlık tesisleri için özel tasarlanmış hijyenik kapı koleksiyonu. Antibakteriyel, yangın güvenlikli, CE belgeli."
  ogType="website"
  ogUrl={currentUrl}
  twitterCard="summary_large_image"
  twitterTitle="Hastane Kapıları | Hijyenik Seri"
  twitterDescription="Sağlık tesisleri için özel tasarlanmış hijyenik kapı koleksiyonu. Antibakteriyel ve güvenli çözümler."
  twitterImage="/assets/img/og/hastane-kapilari-og.webp"
  schema={allSchemas}
>

  <Header />
  <Breadcrumbs items={breadcrumbItems} />

  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">Hastane Kapıları</h1>
          <p class="hero-subtitle">
            Sağlık tesisleri için özel tasarlanmış hijyenik ve antibakteriyel kapı koleksiyonumuz
          </p>
          <div class="hero-badges">
            <span class="badge">6 Model</span>
            <span class="badge">Antibakteriyel</span>
            <span class="badge">Hijyenik</span>
            <span class="badge">CE Belgeli</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Products Section -->
    <section class="products-section">
      <div class="container">
        <header class="section-header">
          <h2>Hastane Kapı Modelleri</h2>
          <p>Sağlık tesisleri için özel tasarlanmış hijyenik kapı çözümleri</p>
        </header>

        <div class="quote-button-section">
          <a href="/iletisim" class="btn-quote-main" aria-label="Hastane kapısı için toptan fiyat teklifi al">
            Hastane Proje Teklifi Al
          </a>
        </div>

        <div class="product-filter-tabs">
          <a href="/urunlerimiz" class="product-filter-btn">
            <span>Tümü</span>
          </a>
          <a href="/pvc-kapilar" class="product-filter-btn">
            <span>PVC Kapılar</span>
          </a>
          <a href="/laminoks-kapilar" class="product-filter-btn">
            <span>Laminoks Kapılar</span>
          </a>
          <a href="/elitpan-kapilar" class="product-filter-btn">
            <span>Elitpan Kapılar</span>
          </a>
          <a href="/hastane-kapilari" class="product-filter-btn active">
            <span>Hastane Kapıları</span>
          </a>
          <a href="/otel-kapilari" class="product-filter-btn">
            <span>Otel Kapıları</span>
          </a>
          <a href="/yangina-dayanikli-kapilar" class="product-filter-btn">
            <span>Yangına Dayanıklı Kapılar</span>
          </a>
        </div>

        <div class="products-grid" id="productsGrid">
          <!-- Products will be loaded here -->
        </div>

        <div class="loading" id="loading">
          <div class="loading-spinner"></div>
          <p>Hastane kapı modelleri yükleniyor...</p>
        </div>
      </div>
    </section>

    <!-- Product Highlights -->
    <section class="highlights-section">
      <div class="container">
        <div class="content-grid">
          <article class="highlights-content">
            <header>
              <h2>Hastane Kapılarımızın Özel Özellikleri</h2>
            </header>

            <p>
              <strong>Hastane serisi</strong> kapılarımız, sağlık tesislerinin özel gereksinimlerini
              karşılamak için tasarlanmış <em>hijyenik ve antibakteriyel</em> profesyonel
              çözümlerdir. Her model hasta güvenliği ve enfeksiyon kontrolü standartlarına uygun olarak üretilir.
            </p>

            <h3>Sağlık Tesisleri İçin Özel Özellikler</h3>
            <ul class="advantages-list">
              <li><strong>Antibakteriyel Yüzey:</strong> Bakteri üremesini engelleyen özel kaplama</li>
              <li><strong>Kolay Temizlik:</strong> Dezenfektan kullanımına dayanıklı yüzey</li>
              <li><strong>Çarpma Yapmaz:</strong> Nem ve su dirençli özel yapı</li>
              <li><strong>Ses Yalıtımı:</strong> Hasta konforu için 32-42 dB ses yalıtımı</li>
              <li><strong>Yangın Güvenliği:</strong> 30-60 dakika yangın dayanımı</li>
              <li><strong>CE Belgeli:</strong> Avrupa standartlarına uygun üretim</li>
            </ul>

            <h3>Kullanım Alanları</h3>
            <p>Hastane kapılarımız şu alanlarda kullanım için uygundur:</p>
            <ul class="advantages-list">
              <li><strong>Hasta Odaları:</strong> Hijyenik ve konforlu hasta ortamı</li>
              <li><strong>Ameliyathaneler:</strong> Steril ortam koruması</li>
              <li><strong>Poliklinikler:</strong> Yoğun kullanıma dayanıklı</li>
              <li><strong>Laboratuvarlar:</strong> Kimyasal dirençli özel yüzey</li>
              <li><strong>Yoğun Bakım:</strong> Ses yalıtımlı ve hijyenik</li>
              <li><strong>Acil Servis:</strong> Hızlı geçiş ve dayanıklılık</li>
            </ul>

            <h3>Kalite Standartları</h3>
            <p>Tüm hastane kapılarımız CE belgesi, yangın dayanım sertifikası, antibakteriyel test raporu
            ve ses yalıtım sertifikalarına sahiptir. Sağlık Bakanlığı standartlarına uygun olarak üretilir.</p>
          </article>

          <aside class="highlights-sidebar">
            <div class="info-cards">
              <div class="stat-card">
                <div class="stat-number">6</div>
                <div class="stat-label">MODEL</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">CE</div>
                <div class="stat-label">BELGELİ</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">A+</div>
                <div class="stat-label">HİJYEN</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">60dk</div>
                <div class="stat-label">YANGIN</div>
              </div>
            </div>

            <div class="quick-contact">
              <h3>Hastane Proje Danışmanlığı</h3>
              <p>Sağlık tesisiniz için özel çözümler:</p>
              <div class="contact-buttons">
                <a href="tel:+905441690038" class="btn-contact-phone">🏥 Hastane Uzmanı</a>
                <a href="https://wa.me/905441690038" class="btn-contact-whatsapp">💬 WhatsApp</a>
              </div>

              <div class="special-features">
                <h4>Özel Hizmetler</h4>
                <ul>
                  <li>✓ CE ve yangın sertifikası</li>
                  <li>✓ Antibakteriyel test raporu</li>
                  <li>✓ Ses yalıtım raporu</li>
                  <li>✓ Proje bazlı özelleştirme</li>
                  <li>✓ 5 yıl garanti</li>
                </ul>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </section>

    <!-- Technical Specifications -->
    <section class="technical-section">
      <div class="container">
        <h2>Teknik Özellikler</h2>
        <div class="tech-grid">
          <div class="tech-card">
            <h3>Malzeme Özellikleri</h3>
            <ul>
              <li>Antibakteriyel PVC/HPL kaplama</li>
              <li>Su ve nem dirençli çekirdek</li>
              <li>Dezenfektan kullanımına dayanıklı</li>
              <li>Çelik kapı kasası</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Boyut Seçenekleri</h3>
            <ul>
              <li>Standart: 70cm x 200cm</li>
              <li>Geniş: 80cm x 200cm</li>
              <li>Çift kanat: 140cm x 200cm</li>
              <li>Özel ölçü üretimi mevcut</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Güvenlik Özellikleri</h3>
            <ul>
              <li>Yangın dayanımı: 30-60 dakika</li>
              <li>Ses yalıtımı: 32-42 dB</li>
              <li>Antibakteriyel sertifikalı</li>
              <li>CE belgeli</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Aksesuarlar</h3>
            <ul>
              <li>Paslanmaz menteşeler</li>
              <li>Antibakteriyel kapı kolları</li>
              <li>Otomatik kapanma sistemi</li>
              <li>Pencere seçenekleri</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <h2>Sağlık Tesisiniz İçin Güvenilir Çözümler</h2>
        <p>Hastane, klinik ve sağlık tesisleri için özel tasarlanmış hijyenik kapı koleksiyonumuzla projelerinizi güvenle tamamlayın</p>
        <div class="cta-buttons">
          <a href="tel:+905441690038" class="btn btn-tertiary">🏥 Hastane Uzmanı Ara</a>
          <a href="/iletisim" class="btn btn-primary">Hastane Proje Danışmanlığı</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* Hero Section */
  .hero {
    padding: 4rem 0;
    background: linear-gradient(135deg, #059669 0%, #10b981 100%);
    color: white;
    text-align: center;
  }

  .hero-title {
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    opacity: 0.95;
    max-width: 800px;
    margin: 0 auto 2rem;
    line-height: 1.6;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
  }

  .hero-badges {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .badge {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  /* Products Section */
  .products-section {
    padding: 4rem 0;
    background: #ffffff;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #1a202c;
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.1rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Quote Button */
  .quote-button-section {
    text-align: center;
    margin-bottom: 3rem;
  }

  .btn-quote-main {
    display: inline-block;
    background: linear-gradient(135deg, #059669, #10b981);
    color: white;
    padding: 1rem 3rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(5, 150, 105, 0.3);
    text-decoration: none;
  }

  .btn-quote-main:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(5, 150, 105, 0.4);
  }

  /* Product Filters */
  .product-filter-tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .product-filter-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 1rem 2rem;
    border-radius: 30px;
    font-weight: 600;
    font-size: 1rem;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .product-filter-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(55, 65, 81, 0.4);
  }

  .product-filter-btn.active {
    background: linear-gradient(135deg, #059669 0%, #10b981 100%);
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(5, 150, 105, 0.4);
  }

  /* Products Grid */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .product-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
  }

  .product-image {
    width: 100%;
    height: 300px;
    overflow: hidden;
    background: #f3f4f6;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-info {
    padding: 1.5rem;
  }

  .product-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 0.5rem;
  }

  .product-features {
    color: #6b7280;
    font-size: 0.9rem;
  }

  /* Loading */
  .loading {
    text-align: center;
    padding: 3rem;
    display: none;
  }

  .loading-spinner {
    border: 4px solid #f3f4f6;
    border-top: 4px solid #059669;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  /* Highlights Section */
