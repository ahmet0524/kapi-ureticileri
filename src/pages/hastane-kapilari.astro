  function openQuoteModal() {
    const modal = document.getElementById('quoteModal');
    modal.classList.add('active');
    modal.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';

    setTimeout(() => {
      document.getElementById('customerName').focus();
    }, 100);
  }

  function closeQuoteModal() {
    const modal = document.getElementById('quoteModal');
    modal.classList.remove('active');
    modal.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
    document.getElementById('quoteForm').reset();
  }

  // Event listeners and initialization
  document.addEventListener('DOMContentLoaded', () => {
    renderProducts();


    // Quote form submission
    document.getElementById('quoteForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      // Checkbox değerlerini topla
      const specialReqs = [];
      if (formData.get('antibakteriyel')) specialReqs.push('Antibakteriyel özellik');
      if (formData.get('yanginDayanimi')) specialReqs.push('Yangın dayanımı');
      if (formData.get('sesIzolasyon')) specialReqs.push('Ses izolasyonu');
      if (formData.get('otomatikKapanma')) specialReqs.push('Otomatik kapanma');
      if (formData.get('camPanel')) specialReqs.push('Cam panel');

      // Validate required fields
      if (!data.customerName || !data.customerPhone || !data.customerEmail) {
        alert('Lütfen zorunlu alanları doldurunuz (Ad Soyad, Telefon ve E-posta)');
        return;
      }

      try {
        const submitBtn = e.target.querySelector('.btn-submit');
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Gönderiliyor...';
        submitBtn.disabled = true;

        // vercel Forms ile form gönderimi
        const response = await fetch(window.location.pathname, {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: new URLSearchParams(formData).toString()
        });

        if (response.ok) {
          alert('Hastane kapısı proje talebiniz alındı! Medikal uzmanımız en kısa sürede size dönüş yapacak.');
          closeQuoteModal();
        } else {
          throw new Error('Form gönderim hatası');
        }

      } catch (error) {
        // Fallback - Email ile gönderim
        const subject = encodeURIComponent('Hastane Kapısı - Medikal Proje Teklifi - CihanPan Door');
        const body = encodeURIComponent(`
