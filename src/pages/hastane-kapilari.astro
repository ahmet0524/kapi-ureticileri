<script>
  const hastaneModels = [];

  const fileNames = [
    "CihanpanDoor-Hastane-Serisi-501-Tik-Antrasit.webp",
    "CihanpanDoor-Hastane-Serisi-502-Avola-Krem.webp",
    "CihanpanDoor-Hastane-Serisi-503-ABD-Ceviz-Krom.webp",
    "CihanpanDoor-Hastane-Serisi-504-Soft-Kapucino-Antrasit.webp",
    "CihanpanDoor-Hastane-Serisi-505-Saruhan-Krem.webp",
    "CihanpanDoor-Hastane-Serisi-506-Antrasit-Krom.webp"
  ];

  fileNames.forEach((fileName, index) => {
    const parts = fileName.replace('.webp', '').split('-');
    const modelNumber = parts[3];
    const colorInfo = parts.slice(4).join(' ');
    const displayName = `Hastane ${modelNumber}`;
    const colorName = colorInfo.replace(/-/g, ' ');

    hastaneModels.push({
      id: `hastane-${modelNumber}`,
      name: displayName,
      category: 'hastane',
      subcategory: index < 3 ? 'hijyenik' : 'antibakteriyel',
      image: `/assets/img/hastane-kapilari/${fileName}`,
      fallbackImage: `https://picsum.photos/300/400?random=${index + 300}`,
      altText: `CihanPan Door Hastane Kapısı Model ${modelNumber} ${colorName} - Hijyenik ve Antibakteriyel Sağlık Tesisi Kapısı`,
      features: index < 3 ? 'Hijyenik • CE Belgeli' : 'Antibakteriyel • Yangın Güvenlikli',
      colorInfo: colorName,
      description: `Hastane kapısı model ${modelNumber} ${colorName}. Sağlık tesisleri için özel tasarlanmış hijyenik ve antibakteriyel kapı. CE belgeli, yangın güvenlikli, ses yalıtımlı. Kayseri üretimi, toptan satış avantajı.`,
      seoKeywords: `hastane kapısı model ${modelNumber}, hijyenik kapı, antibakteriyel kapı, sağlık tesisi kapısı, ameliyathane kapısı ${colorName.toLowerCase()}, kayseri hastane kapısı üreticisi`,
      schemaData: {
        "@type": "Product",
        "name": `Hastane Kapısı Model ${modelNumber} - ${colorName}`,
        "description": `Sağlık tesisleri için hijyenik ve antibakteriyel hastane kapısı`,
        "brand": "CihanPan Door",
        "material": "Antibakteriyel PVC/HPL",
        "category": "Hastane Kapıları",
        "color": colorName
      }
    });
  });

  function renderProducts() {
    const grid = document.getElementById('productsGrid');
    const loading = document.getElementById('loading');

    loading.style.display = 'block';
    grid.innerHTML = '';

    setTimeout(() => {
      if (hastaneModels.length === 0) {
        grid.innerHTML = `
          <div style="grid-column: 1/-1; text-align: center; padding: 3rem;">
            <h3 style="color: #6b7280; margin-bottom: 1rem;">Bu kategoride henüz ürün bulunmuyor</h3>
            <p style="color: #9ca3af;">Yakında yeni hastane kapı modelleri eklenecek.</p>
          </div>
        `;
      } else {
        hastaneModels.forEach((product) => {
          const card = createProductCard(product);
          grid.appendChild(card);
        });
      }

      loading.style.display = 'none';
    }, 300);
  }

  function createProductCard(product) {
    const card = document.createElement('article');
    card.className = 'product-card';
    card.setAttribute('aria-label', `${product.name} ${product.colorInfo} hastane kapısı modeli`);

    card.innerHTML = `
      <div class="product-image">
        <img src="${product.image}"
             alt="${product.altText}"
             title="${product.name} ${product.colorInfo} - CihanPan Door Hastane Kapısı"
             loading="lazy"
             width="300"
             height="300"
             onerror="this.src='${product.fallbackImage}'; this.alt='${product.name} Hastane Kapısı Örneği';">
      </div>
      <div class="product-info">
        <h3 class="product-title">${product.name}</h3>
        <div class="product-features">${product.features}</div>
        <div style="font-size: 0.8rem; color: #6b7280; margin-top: 0.25rem;">${product.colorInfo}</div>
      </div>
    `;

    return card;
  }

  document.addEventListener('DOMContentLoaded', () => {
    renderProducts();
  });
</script>
