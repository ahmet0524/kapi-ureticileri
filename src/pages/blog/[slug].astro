---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection('article');

  // Debug: Hangi route'lar oluşturuluyor görelim
  console.log('📄 Oluşturulan article route\'ları:');
  posts.forEach(post => {
    console.log(`  - /${post.slug}`);
  });

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
---

<Layout title={post.data.title} description={post.data.description}>
  <main class="max-w-3xl mx-auto px-6 py-10">
    <article class="bg-white dark:bg-zinc-900 shadow-xl rounded-2xl overflow-hidden border border-zinc-200 dark:border-zinc-700">
      {post.data.heroImage && (
        <img
          src={post.data.heroImage.src || post.data.heroImage}
          alt={post.data.title}
          class="w-full h-64 object-cover"
        />
      )}
      <div class="p-6 prose dark:prose-invert">
        <h1 class="text-4xl font-bold mb-4">{post.data.title}</h1>
        <div class="text-sm text-gray-500 mb-6 flex justify-between">
          <span>🗓️ {post.data.pubDate.toLocaleDateString()}</span>
          {post.data.updatedDate && (
            <span>🔄 {post.data.updatedDate.toLocaleDateString()}</span>
          )}
        </div>
        <post.Content />
      </div>
    </article>
  </main>
</Layout>
