const articlesAsPosts = allArticles.map(article => ({
  slug: article.slug,
  title: article.data.title,
  excerpt: article.data.description,
  image: article.data.heroImage?.src || article.data.heroImage || '/assets/img/blog/default-thumb.webp',
  date: article.data.pubDate.toISOString().split('T')[0],
  readTime: article.data.readTime || '5 dakika',
  category: article.data.category || 'Genel',
  featured: article.data.featured || false
}));

// Hardcoded blog postlarƒ± (statik sayfalar i√ßin)
const staticPosts = [
  {
