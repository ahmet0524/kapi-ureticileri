];

// T√ºm postlarƒ± birle≈ütir
const allPosts = [...articlesAsPosts, ...staticPosts];

// Tarihe g√∂re sƒ±rala (en yeni √∂nce)
allPosts.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

const featuredPost = allPosts.find(post => post.featured);
const regularPosts = allPosts.filter(post => !post.featured);

console.log('üìö Blog Index - T√ºm Postlar:', allPosts.length);
console.log('‚≠ê Featured Post:', featuredPost?.title || 'Yok');
