  }

  .highlights-content h3 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #0891b2;
    margin: 2.5rem 0 1rem;
    line-height: 1.4;
  }

  .highlights-content p {
    color: #4a5568;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }

