    "CihanpanDoor-Otel-Serisi-405-Vision-Gri.webp",
    "CihanpanDoor-Otel-Serisi-406-Dark-Santana.webp"
  ];

  fileNames.forEach((fileName, index) => {
    const parts = fileName.replace('.webp', '').split('-');
    const modelNumber = parts[3];
    const colorInfo = parts.slice(4).join(' ');
    const displayName = `Otel ${modelNumber}`;

    otelModels.push({
      id: `otel-${modelNumber}`,
      name: displayName,
      category: 'otel',
      subcategory: index < 3 ? 'premium' : 'luxury',
      image: `/assets/img/otel-kapilari/${fileName}`,
      fallbackImage: `https://picsum.photos/300/400?random=${index + 400}`,
      altText: `CihanPan Door Otel KapÄ±sÄ± Model ${modelNumber} ${colorInfo} - Premium Kalite Konaklama Tesisi KapÄ±sÄ±`,
      features: index < 3 ? 'Premium â€¢ ÅÄ±k TasarÄ±m' : 'Luxury â€¢ Ã–zel TasarÄ±m',
      colorInfo: colorInfo
    });
  });

  function renderProducts() {
    const grid = document.getElementById('productsGrid');
    const loading = document.getElementById('loading');

    if (!grid || !loading) return;

    loading.style.display = 'block';
    grid.innerHTML = '';

    setTimeout(() => {
      if (otelModels.length === 0) {
        grid.innerHTML = `
          <div style="grid-column: 1/-1; text-align: center; padding: 3rem;">
            <h3 style="color: #6b7280; margin-bottom: 1rem;">Bu kategoride henÃ¼z Ã¼rÃ¼n bulunmuyor</h3>
            <p style="color: #9ca3af;">YakÄ±nda yeni otel kapÄ± modelleri eklenecek.</p>
          </div>
        `;
      } else {
        otelModels.forEach((product) => {
          const card = createProductCard(product);
          grid.appendChild(card);
        });
      }

      loading.style.display = 'none';
    }, 300);
  }

  function createProductCard(product) {
    const card = document.createElement('article');
    card.className = 'product-card';
    card.setAttribute('itemscope', '');
    card.setAttribute('itemtype', 'https://schema.org/Product');
    card.setAttribute('aria-label', `${product.name} ${product.colorInfo} otel kapÄ±sÄ± modeli`);

    card.innerHTML = `
      <div class="product-image">
        <img src="${product.image}"
             alt="${product.altText}"
             title="${product.name} ${product.colorInfo} - CihanPan Door Otel KapÄ±sÄ±"
             loading="lazy"
             width="300"
             height="300"
             itemprop="image"
             onerror="this.src='${product.fallbackImage}'; this.alt='${product.name} Otel KapÄ±sÄ± Ã–rneÄŸi';">
      </div>
      <div class="product-info">
        <h3 class="product-title" itemprop="name">${product.name}</h3>
        <div class="product-features">${product.features}</div>
