---
// src/pages/otel-kapilar.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

// Dynamic URL'ler için base setup
const baseUrl = 'https://kapi-ureticileri.vercel.app';
const currentUrl = `${baseUrl}${Astro.url.pathname}`;

const breadcrumbItems = [
  { name: "Ana Sayfa", href: "/" },
  { name: "Ürünlerimiz", href: "/urunlerimiz" },
  { name: "Otel Kapıları", href: "/otel-kapilari" }
];

// SEO Schema
const otelSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Otel Kapıları",
  "description": "Kayseri'den üretilen otel ve konaklama tesisleri için özel tasarlanmış kapı modelleri. Premium kalite, şık tasarım.",
  "url": currentUrl,
  "mainEntity": {
    "@type": "ItemList",
    "name": "Otel Kapı Modelleri",
    "numberOfItems": 6,
    "itemListElement": [
      {
        "@type": "Product",
        "name": "Otel Kapısı",
        "manufacturer": {
          "@type": "Organization",
          "name": "CihanPan Door",
          "url": baseUrl,
          "logo": `${baseUrl}/assets/img/logo.webp`
        },
        "category": "Otel Kapısı",
        "material": "Premium Laminat",
        "brand": "CihanPan Door"
      }
    ]
  }
};

// Organization Schema
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "CihanPan Door",
  "url": baseUrl,
  "logo": `${baseUrl}/assets/img/logo.webp`,
  "description": "Kayseri'den otel ve konaklama tesisleri için özel kapı üreticisi - Premium kalite, şık tasarım",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Kayseri",
    "addressCountry": "TR"
  },
  "areaServed": ["Turkey", "Europe", "Middle East"],
  "serviceType": ["Otel Kapı Üretimi", "Premium Kapı Çözümleri", "Toptan Satış", "İhracat"]
};

// Breadcrumb Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.href ? `${baseUrl}${item.href}` : currentUrl
  }))
};
---

<Layout
  title="Otel Kapıları | Premium Seri Kayseri CihanPan Door"
  description="Kayseri'nin otel ve konaklama tesisleri için özel tasarlanmış kapı koleksiyonu. Premium kalite, şık tasarım, üretici fiyat avantajı."
  keywords="otel kapısı, konaklama tesisi kapısı, premium kapı, şık kapı tasarımı, kayseri otel kapısı üreticisi, luxury door"
  canonical={currentUrl}
  ogImage="/assets/img/og/otel-kapilari-og.webp"
  ogTitle="Otel Kapıları - Premium Seri | CihanPan Door"
  ogDescription="Otel ve konaklama tesisleri için özel tasarlanmış kapı koleksiyonu. Premium kalite, şık tasarım."
  ogType="website"
  ogUrl={currentUrl}
  twitterCard="summary_large_image"
  twitterTitle="Otel Kapıları | Premium Seri"
  twitterDescription="Konaklama tesisleri için özel tasarlanmış kapı koleksiyonu. Premium ve şık çözümler."
  twitterImage="/assets/img/og/otel-kapilari-og.webp"
  schema={[otelSchema, organizationSchema, breadcrumbSchema]}
>

  <Header />
  <Breadcrumbs items={breadcrumbItems} />

  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">Otel Kapıları</h1>
          <p class="hero-subtitle">
            Konaklama tesisleri için özel tasarlanmış premium kapı koleksiyonumuz
          </p>
          <div class="hero-badges">
            <span class="badge">6 Model</span>
            <span class="badge">Premium Kalite</span>
            <span class="badge">Şık Tasarım</span>
            <span class="badge">Lüks Görünüm</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Products Section -->
    <section class="products-section">
      <div class="container">
        <header class="section-header">
          <h2>Otel Kapı Modelleri</h2>
          <p>Konaklama tesisleri için özel tasarlanmış premium kapı çözümleri</p>
        </header>

        <div class="quote-button-section">
          <a href="/iletisim" class="btn-quote-main" aria-label="Otel kapısı için toptan fiyat teklifi al">
            Otel Proje Teklifi Al
          </a>
        </div>

        <div class="product-filter-tabs">
          <a href="/urunlerimiz" class="product-filter-btn">
            <span>Tümü</span>
          </a>
          <a href="/pvc-kapilar" class="product-filter-btn">
            <span>PVC Kapılar</span>
          </a>
          <a href="/laminoks-kapilar" class="product-filter-btn">
            <span>Laminoks Kapılar</span>
          </a>
          <a href="/elitpan-kapilar" class="product-filter-btn">
            <span>Elitpan Kapılar</span>
          </a>
          <a href="/hastane-kapilari" class="product-filter-btn">
            <span>Hastane Kapıları</span>
          </a>
          <a href="/otel-kapilari" class="product-filter-btn active">
            <span>Otel Kapıları</span>
          </a>
          <a href="/yangina-dayanikli-kapilar" class="product-filter-btn">
            <span>Yanmaya Dayanıklı Kapılar</span>
          </a>
        </div>

        <div class="products-grid" id="productsGrid">
          <!-- Products will be loaded here -->
        </div>

        <div class="loading" id="loading">
          <div class="loading-spinner"></div>
          <p>Otel kapı modelleri yükleniyor...</p>
        </div>
      </div>
    </section>

    <!-- Product Highlights -->
    <section class="highlights-section">
      <div class="container">
        <div class="content-grid">
          <article class="highlights-content">
            <header>
              <h2>Otel Kapılarımızın Özel Özellikleri</h2>
            </header>

            <p>
              <strong>Otel serisi</strong> kapılarımız, konaklama tesislerinin özel gereksinimlerini
              karşılamak için tasarlanmış <em>premium kalite ve şık tasarımlı</em> profesyonel
              çözümlerdir. Her model lüks standartlara uygun olarak üretilir.
            </p>

            <h3>Konaklama Tesisleri İçin Özel Özellikler</h3>
            <ul class="advantages-list">
              <li><strong>Premium Yüzey:</strong> Lüks görünüm sağlayan özel kaplama</li>
              <li><strong>Ses Yalıtımı:</strong> Misafir konforu için gelişmiş akustik performans</li>
              <li><strong>Dayanıklılık:</strong> Yoğun kullanıma uygun özel yapı</li>
              <li><strong>Şık Tasarım:</strong> Modern ve zarif estetik seçenekler</li>
              <li><strong>Yangın Güvenliği:</strong> Konaklama tesisleri standartlarına uygun</li>
              <li><strong>Kolay Bakım:</strong> Pratik temizlik ve uzun ömür</li>
            </ul>

            <h3>Kullanım Alanları</h3>
            <p>Otel kapılarımız şu alanlarda kullanım için uygundur:</p>
            <ul class="advantages-list">
              <li><strong>Otel Odaları:</strong> Konforlu ve şık misafir deneyimi</li>
              <li><strong>Apart Oteller:</strong> Modern ve dayanıklı çözümler</li>
              <li><strong>Butik Oteller:</strong> Özel tasarım seçenekleri</li>
              <li><strong>Pansiyonlar:</strong> Ekonomik ve kaliteli alternatifler</li>
              <li><strong>Tatil Köyleri:</strong> Toplu proje çözümleri</li>
              <li><strong>Konaklama Tesisleri:</strong> Çok amaçlı kullanım</li>
            </ul>

            <h3>Kalite Standartları</h3>
            <p>Tüm otel kapılarımız TSE standartlarına uygun olarak üretilir ve
            konaklama tesislerinin kalite gereksinimlerini karşılar. İhracat kalitesinde
            üretim ile uluslararası projelerde de tercih edilir.</p>
          </article>

          <aside class="highlights-sidebar">
            <div class="info-cards">
              <div class="stat-card">
                <div class="stat-number">6</div>
                <div class="stat-label">MODEL</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">TSE</div>
                <div class="stat-label">STANDART</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">A+</div>
                <div class="stat-label">KALİTE</div>
              </div>
              <div class="stat-card">
                <div class="stat-number">24/7</div>
                <div class="stat-label">DAYANIM</div>
              </div>
            </div>

            <div class="quick-contact">
              <h3>Otel Proje Danışmanlığı</h3>
              <p>Konaklama tesisiniz için özel çözümler:</p>
              <div class="contact-buttons">
                <a href="tel:+905441690038" class="btn-contact-phone">🏨 Otel Uzmanı</a>
                <a href="https://wa.me/905441690038" class="btn-contact-whatsapp">💬 WhatsApp</a>
              </div>

              <div class="special-features">
                <h4>Özel Hizmetler</h4>
                <ul>
                  <li>✓ Kalite sertifikası</li>
                  <li>✓ Ses yalıtım raporu</li>
                  <li>✓ Proje bazlı özelleştirme</li>
                  <li>✓ Teknik destek</li>
                </ul>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </section>

    <!-- Technical Specifications -->
    <section class="technical-section">
      <div class="container">
        <h2>Teknik Özellikler</h2>
        <div class="tech-grid">
          <div class="tech-card">
            <h3>Malzeme Özellikleri</h3>
            <ul>
              <li>Premium laminat yüzey</li>
              <li>MDF çekirdek yapı</li>
              <li>Su dirençli kenar bandı</li>
              <li>Çelik kapı kasası seçeneği</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Boyut Seçenekleri</h3>
            <ul>
              <li>Standart: 70cm x 200cm</li>
              <li>Geniş: 80cm x 200cm</li>
              <li>Çift kanat: 140cm x 200cm</li>
              <li>Özel ölçü üretimi mevcut</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Renk Seçenekleri</h3>
            <ul>
              <li>İtalyan Ceviz</li>
              <li>Kestane</li>
              <li>Tik</li>
              <li>Özel renk seçenekleri</li>
            </ul>
          </div>
          <div class="tech-card">
            <h3>Aksesuarlar</h3>
            <ul>
              <li>Premium menteşeler</li>
              <li>Şık kapı kolları</li>
              <li>Otomatik kapanma sistemi</li>
              <li>Cam panel seçenekleri</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <h2>Konaklama Tesisiniz İçin Profesyonel Çözümler</h2>
        <p>Otel, apart ve konaklama tesisleri için özel tasarlanmış kapı koleksiyonumuzla projelerinizi güvenilir çözümlerle tamamlayın</p>
        <div class="cta-buttons">
          <a href="tel:+905441690038" class="btn btn-tertiary">🏨 Otel Uzmanı Ara</a>
          <a href="/iletisim" class="btn btn-primary">Otel Proje Danışmanlığı</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>


<script>
  const otelModels = [];

  const fileNames = [
    "CihanpanDoor-Otel-Serisi-401-Italyan-Ceviz.webp",
    "CihanpanDoor-Otel-Serisi-402-Kestane.webp",
    "CihanpanDoor-Otel-Serisi-403-Tik.webp",
    "CihanpanDoor-Otel-Serisi-404-Yildiz-Metal-Antrasit.webp",
    "CihanpanDoor-Otel-Serisi-405-Vision-Gri.webp",
    "CihanpanDoor-Otel-Serisi-406-Dark-Santana.webp"
  ];

  fileNames.forEach((fileName, index) => {
    const parts = fileName.replace('.webp', '').split('-');
    const modelNumber = parts[3];
    const colorInfo = parts.slice(4).join(' ');
    const displayName = `Otel ${modelNumber}`;
    const colorName = colorInfo.replace(/-/g, ' ');

    otelModels.push({
      id: `otel-${modelNumber}`,
      name: displayName,
      category: 'otel',
      subcategory: index < 3 ? 'premium' : 'luxury',
      image: `/assets/img/otel-kapilari/${fileName}`,
      fallbackImage: `https://picsum.photos/300/400?random=${index + 400}`,
      altText: `CihanPan Door Otel Kapısı Model ${modelNumber} ${colorName} - Premium Kalite Konaklama Tesisi Kapısı`,
      features: index < 3 ? 'Premium • Şık Tasarım' : 'Luxury • Özel Tasarım',
      colorInfo: colorName,
      description: `Otel kapısı model ${modelNumber} ${colorName}. Konaklama tesisleri için özel tasarlanmış premium kalite ve şık kapı. TSE standartlarına uygun, modern tasarım. Kayseri üretimi, toptan satış avantajı.`,
      seoKeywords: `otel kapısı model ${modelNumber}, premium kapı, konaklama tesisi kapısı, şık kapı tasarımı, luxury door ${colorName.toLowerCase()}, kayseri otel kapısı üreticisi`,
      schemaData: {
        "@type": "Product",
        "name": `Otel Kapısı Model ${modelNumber} - ${colorName}`,
        "description": `Konaklama tesisleri için premium kalite otel kapısı`,
        "brand": "CihanPan Door",
        "material": "Premium Laminat",
        "category": "Otel Kapıları",
        "color": colorName
      }
    });
  });

  function renderProducts() {
    const grid = document.getElementById('productsGrid');
    const loading = document.getElementById('loading');

    loading.style.display = 'block';
    grid.innerHTML = '';

    setTimeout(() => {
      if (otelModels.length === 0) {
        grid.innerHTML = `
          <div style="grid-column: 1/-1; text-align: center; padding: 3rem;">
            <h3 style="color: #6b7280; margin-bottom: 1rem;">Bu kategoride henüz ürün bulunmuyor</h3>
            <p style="color: #9ca3af;">Yakında yeni otel kapı modelleri eklenecek.</p>
          </div>
        `;
      } else {
        otelModels.forEach((product) => {
          const card = createProductCard(product);
          grid.appendChild(card);
        });
      }

      loading.style.display = 'none';
    }, 300);
  }

  function createProductCard(product) {
    const card = document.createElement('article');
    card.className = 'product-card';
    card.setAttribute('aria-label', `${product.name} ${product.colorInfo} otel kapısı modeli`);

    card.innerHTML = `
      <div class="product-image">
        <img src="${product.image}"
             alt="${product.altText}"
             title="${product.name} ${product.colorInfo} - CihanPan Door Otel Kapısı"
             loading="lazy"
             width="300"
             height="300"
             onerror="this.src='${product.fallbackImage}'; this.alt='${product.name} Otel Kapısı Örneği';">
      </div>
      <div class="product-info">
        <h3 class="product-title">${product.name}</h3>
        <div class="product-features">${product.features}</div>
        <div style="font-size: 0.8rem; color: #6b7280; margin-top: 0.25rem;">${product.colorInfo}</div>
      </div>
    `;

    return card;
  }

  document.addEventListener('DOMContentLoaded', () => {
    renderProducts();
  });
</script>
